#!/usr/bin/pooscript
# lolcat - rainbow colored text (simulated with ASCII)

# ANSI-like color simulation with text decorations
colors = ['R', 'O', 'Y', 'G', 'B', 'I', 'V']
color_names = ['RED', 'ORANGE', 'YELLOW', 'GREEN', 'BLUE', 'INDIGO', 'VIOLET']

if len(args) > 0:
    text = ' '.join(args)
elif stdin:
    text = stdin
else:
    text = "Meow! ðŸŒˆ"

# Add rainbow prefix to each character
output = ""
for i, char in enumerate(text):
    color_idx = i % len(colors)
    if char != '\n' and char != ' ':
        output += f"[{colors[color_idx]}]{char}"
    else:
        output += char

print(output)
print("")
print("(In a real terminal, this would be in rainbow colors!)")
