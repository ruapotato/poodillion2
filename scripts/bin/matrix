#!/usr/bin/pooscript
# matrix - Enter the Matrix

chars = "ｦｧｨｩｪｫｬｭｮｯｰｱｲｳｴｵｶｷｸｹｺｻｼｽｾｿﾀﾁﾂﾃﾄﾅﾆﾇﾈﾉﾊﾋﾌﾍﾎﾏﾐﾑﾒﾓﾔﾕﾖﾗﾘﾙﾚﾛﾜﾝ01234567890"

print("Wake up, Neo...")
print("")

# Generate 10 lines of matrix rain (pseudo-random based on time)
seed = int(time() * 1000)
for line_num in range(10):
    line = ""
    for col in range(50):
        # Pseudo-random based on position and time
        val = (seed + line_num * 50 + col) % 10
        if val > 3:
            char_idx = (seed + line_num + col) % len(chars)
            line += chars[char_idx]
        else:
            line += " "
    print(line)

print("")
print("Follow the white rabbit...")
print("Knock, knock, Neo.")
