#!/usr/bin/pooscript
# uptime - show how long the system has been running

# Get current time
current = time()

# This is a simulation, so let's make up a fun uptime
# Use modulo for pseudo-random values
days = int(current) % 999
hours = (int(current * 7) % 24)
minutes = (int(current * 13) % 60)

# Format uptime
uptime_str = ""
if days > 0:
    uptime_str = f"{days} days, {hours}:{minutes:02d}"
else:
    uptime_str = f"{hours}:{minutes:02d}"

# Number of users (always 1 in our virtual world)
users = 1

# Load averages (made up)
load1 = round((int(current * 17) % 200) / 100.0, 2)
load5 = round((int(current * 23) % 200) / 100.0, 2)
load15 = round((int(current * 31) % 200) / 100.0, 2)

print(f"up {uptime_str}, {users} user, load average: {load1}, {load5}, {load15}")
