}

# Default for unknown characters
default_char = [
    "███████ ",
    "█     █ ",
    "█  ?  █ ",
    "█     █ ",
    "███████ "
]

# Print each line
for row in range(5):
    line = ""
    for char in text:
        if char in letters:
            line += letters[char][row]
        else:
            line += default_char[row]
        line += " "
    print(line)
