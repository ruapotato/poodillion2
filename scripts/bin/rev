#!/usr/bin/pooscript
# rev - reverse lines characterwise

if len(args) > 0:
    # Reverse each argument
    for arg in args:
        print(arg[::-1])
elif stdin:
    # Reverse stdin
    for line in stdin.split('\n'):
        if line:
            print(line[::-1])
else:
    error("rev: no input")
    exit(1)
