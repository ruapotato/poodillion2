# Test 28: Basic heap allocation
from lib.memory import heap_init, alloc

def main():
    print("Before heap_init\n")
    result = heap_init()
    print("After heap_init\n")
    if result == 1:
        print("heap_init OK\n")
    else:
        print("heap_init FAIL\n")
    print("Before alloc\n")
    ptr = alloc(16)
    print("After alloc\n")
    if ptr != 0:
        print("Got ptr!\n")
    else:
        print("Alloc failed\n")
