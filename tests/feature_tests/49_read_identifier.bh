# Test 49: Read identifier pattern (simplified - no slicing)
class Lexer:
    def __init__(self, text: str):
        self.text: str = text
        self.pos: int = 0
        self.length: int = len(text)

    def at_end(self) -> bool:
        return self.pos >= self.length

    def current_char(self) -> char:
        return self.text[self.pos]

    def advance(self):
        self.pos = self.pos + 1

    def is_alpha(self, ch: char) -> bool:
        if ch >= 'a' and ch <= 'z':
            return True
        return False

    def read_identifier_len(self) -> int:
        start: int = self.pos
        while not self.at_end():
            ch: char = self.current_char()
            if self.is_alpha(ch):
                self.advance()
            else:
                break
        return self.pos - start

def main() -> int:
    print("Read identifier test\n")

    lex: Lexer = Lexer("hello world")
    ident_len: int = lex.read_identifier_len()

    if ident_len == 5:
        print("Len: OK\n")
    else:
        print("Len: FAIL\n")

    if lex.pos == 5:
        print("Pos: OK\n")
    else:
        print("Pos: FAIL\n")

    print("Done\n")
    return 0
