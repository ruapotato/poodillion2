# Test slice functionality

proc main(): int32 =
    # Create an array
    var arr: array[5, int32] = [10, 20, 30, 40, 50]

    # Create a slice from the array (elements 1..4 = [20, 30, 40])
    var slice: []int32 = arr[1..4]

    # Test len() on slice - should be 3
    var slice_len: int32 = len(slice)

    # Test len() on array - should be 5
    var arr_len: int32 = len(arr)

    # Test indexing slice - slice[0] should be 20, slice[1] should be 30
    var first: int32 = slice[0]
    var second: int32 = slice[1]

    # Return: slice_len * 10 + first + second = 3*10 + 20 + 30 = 80
    return slice_len * 10 + first + second
