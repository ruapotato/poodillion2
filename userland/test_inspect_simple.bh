# Simplified inspect test
from lib.syscalls import *

def main():
  # Allocate buffer
  old_brk: int32 = syscall1(SYS_brk, 0)
  new_brk: int32 = old_brk + 4096
  syscall1(SYS_brk, new_brk)
  buffer: *uint8 = cast[*uint8](old_brk)

  # Read 4 bytes
  n: int32 = syscall3(SYS_read, STDIN, cast[int32](buffer), 4)

  # Write them back one at a time using addr
  i: int32 = 0
  while i < 4:
    syscall3(SYS_write, STDOUT, cast[int32](addr(buffer[i])), 1)
    i = i + 1

  syscall1(SYS_exit, 0)
