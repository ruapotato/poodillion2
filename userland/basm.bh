# ============================================================================
# Parser - First Pass (Collect Labels)
# ============================================================================

proc parse_line_pass1() =
  skip_whitespace()

  if g_pos >= g_source_len:
    return
  if g_source[g_pos] == cast[uint8](10):
    g_pos = g_pos + 1
    g_line = g_line + 1
    return
  if g_source[g_pos] == cast[uint8](59):  # ';' comment
    skip_line()
    return

  # Check for label (ends with ':')
  var start: int32 = g_pos
  read_ident()
  skip_whitespace()

  if g_source[g_pos] == cast[uint8](58):  # ':'
    # This is a label
    var sym_idx: int32 = find_symbol(g_token_buf)
    if sym_idx < 0:
      # Allocate name storage
      var name_len: int32 = strlen(g_token_buf)
      var name: ptr uint8 = cast[ptr uint8](cast[int32](g_data) + g_data_cap - 1024 - g_sym_count * 64)
      strcpy(name, g_token_buf)
      sym_idx = add_symbol(name, current_offset(), g_current_section, SYM_LOCAL)
    else:
      set_symbol_value(sym_idx, current_offset())
      set_symbol_section(sym_idx, g_current_section)
    g_pos = g_pos + 1
    skip_whitespace()
    if g_source[g_pos] == cast[uint8](10) or g_pos >= g_source_len:
      if g_pos < g_source_len:
        g_pos = g_pos + 1
        g_line = g_line + 1
      return

  # Check for directives
  if strcmp(g_token_buf, cast[ptr uint8]("section")) == 0:
    skip_whitespace()
    read_ident()
    if strcmp(g_token_buf, cast[ptr uint8](".text")) == 0:
      g_current_section = SYM_TEXT
    else:
      if strcmp(g_token_buf, cast[ptr uint8](".data")) == 0:
        g_current_section = SYM_DATA
      else:
        if strcmp(g_token_buf, cast[ptr uint8](".bss")) == 0:
          g_current_section = SYM_BSS
    skip_line()
    return

  if strcmp(g_token_buf, cast[ptr uint8]("global")) == 0:
    skip_whitespace()
    read_ident()
    var sym_idx: int32 = find_symbol(g_token_buf)
    if sym_idx < 0:
      var name_len: int32 = strlen(g_token_buf)
      var name: ptr uint8 = cast[ptr uint8](cast[int32](g_data) + g_data_cap - 1024 - g_sym_count * 64)
      strcpy(name, g_token_buf)
      sym_idx = add_symbol(name, 0, SYM_UNDEFINED, SYM_GLOBAL)
    else:
      # Mark as global
      var entry: ptr uint8 = cast[ptr uint8](cast[int32](g_symbols) + sym_idx * 32)
      var type_ptr: ptr int32 = cast[ptr int32](cast[int32](entry) + 12)
      type_ptr[0] = SYM_GLOBAL
    skip_line()
    return

  if strcmp(g_token_buf, cast[ptr uint8]("extern")) == 0:
    skip_whitespace()
    read_ident()
    var sym_idx: int32 = find_symbol(g_token_buf)
    if sym_idx < 0:
      var name: ptr uint8 = cast[ptr uint8](cast[int32](g_data) + g_data_cap - 1024 - g_sym_count * 64)
      strcpy(name, g_token_buf)
      discard add_symbol(name, 0, SYM_UNDEFINED, SYM_EXTERN)
    skip_line()
    return

  if strcmp(g_token_buf, cast[ptr uint8]("bits")) == 0:
    skip_line()
    return

  # Skip to end of line for pass 1
  skip_line()

# ============================================================================
# Parser - Second Pass (Generate Code)
# ============================================================================

# Parse operand - returns type and value
# Type: 0=register, 1=immediate, 2=memory [reg], 3=memory [reg+disp], 4=symbol
#       5=memory [base+index*scale], 6=memory [base+index*scale+disp]
var g_op_type: int32
var g_op_reg: int32
var g_op_disp: int32
var g_op_sym: int32
var g_op_index: int32   # index register for SIB addressing
var g_op_scale: int32   # scale factor (1, 2, 4, 8) for SIB addressing
var g_op_size: int32    # size prefix: 0=default, 1=byte, 2=word, 4=dword

proc parse_operand() =
  skip_whitespace()
  g_op_size = 0  # Reset size prefix

  # Check for immediate
  if g_source[g_pos] == cast[uint8](45) or is_digit(g_source[g_pos]) == 1:
    g_op_type = 1
    g_op_disp = read_number()
    return

  # Check for size prefix before memory access (byte, word, dword)
  var size_prefix: int32 = 0
  var save_pos: int32 = g_pos
  if is_alpha(g_source[g_pos]) == 1:
    read_ident()
    if strcmp(g_token_buf, cast[ptr uint8]("byte")) == 0:
      skip_whitespace()
      if g_source[g_pos] == cast[uint8](91):  # '[' follows
        size_prefix = 1
      else:
        g_pos = save_pos  # restore if no '[' follows
    else:
      if strcmp(g_token_buf, cast[ptr uint8]("word")) == 0:
        skip_whitespace()
        if g_source[g_pos] == cast[uint8](91):  # '[' follows
          size_prefix = 2
        else:
          g_pos = save_pos
      else:
        if strcmp(g_token_buf, cast[ptr uint8]("dword")) == 0:
          skip_whitespace()
          if g_source[g_pos] == cast[uint8](91):  # '[' follows
            size_prefix = 4
          else:
            g_pos = save_pos
        else:
          # Not a size prefix, restore position
          g_pos = save_pos

  g_op_size = size_prefix  # Store size prefix for encoder

  # Check for memory access
  if g_source[g_pos] == cast[uint8](91):  # '['
    g_pos = g_pos + 1
    skip_whitespace()

    # Check for 'rel' keyword
    read_ident()
    if strcmp(g_token_buf, cast[ptr uint8]("rel")) == 0:
      skip_whitespace()
      read_ident()
      g_op_sym = find_symbol(g_token_buf)
      if g_op_sym < 0:
        # Create undefined symbol
        var name: ptr uint8 = cast[ptr uint8](cast[int32](g_data) + g_data_cap - 1024 - g_sym_count * 64)
        strcpy(name, g_token_buf)
        g_op_sym = add_symbol(name, 0, SYM_UNDEFINED, SYM_EXTERN)
      g_op_type = 4
      skip_whitespace()
      if g_source[g_pos] == cast[uint8](93):
        g_pos = g_pos + 1
      return

    # Parse base register
    g_op_reg = parse_register(g_token_buf)
    if g_op_reg < 0:
      # Try as symbol
      g_op_sym = find_symbol(g_token_buf)
      if g_op_sym >= 0:
        g_op_type = 4
        skip_whitespace()
        if g_source[g_pos] == cast[uint8](93):
          g_pos = g_pos + 1
        return
      print_err(cast[ptr uint8]("Error: invalid operand\n"))
      g_error = 1
      return

    skip_whitespace()
    g_op_index = -1
    g_op_scale = 1
    g_op_disp = 0

    # Check for + or - (could be index*scale or displacement)
    if g_source[g_pos] == cast[uint8](43) or g_source[g_pos] == cast[uint8](45):
      var neg: int32 = 0
      if g_source[g_pos] == cast[uint8](45):
        neg = 1
      g_pos = g_pos + 1
      skip_whitespace()

      # Check if it's a digit (displacement) or identifier (index register)
      if is_digit(g_source[g_pos]) == 1:
        g_op_disp = read_number()
        if neg == 1:
          g_op_disp = 0 - g_op_disp
        g_op_type = 3  # [reg+disp]
        skip_whitespace()
        # Check for additional index*scale after displacement: [base + disp + index*scale]
        if g_source[g_pos] == cast[uint8](43) or g_source[g_pos] == cast[uint8](45):
          var neg2: int32 = 0
          if g_source[g_pos] == cast[uint8](45):
            neg2 = 1
          g_pos = g_pos + 1
          skip_whitespace()
          if is_alpha(g_source[g_pos]) == 1:
            read_ident()
            var idx_reg: int32 = parse_register(g_token_buf)
            if idx_reg >= 0:
              g_op_index = idx_reg
              skip_whitespace()
              if g_source[g_pos] == cast[uint8](42):  # '*'
                g_pos = g_pos + 1
                skip_whitespace()
                g_op_scale = read_number()
              else:
                g_op_scale = 1
              g_op_type = 6  # [base + disp + index*scale]
      else:
        # Could be index*scale pattern
        read_ident()
        var idx_reg: int32 = parse_register(g_token_buf)
        if idx_reg >= 0:
          g_op_index = idx_reg
          skip_whitespace()
          # Check for *scale
          if g_source[g_pos] == cast[uint8](42):  # '*'
            g_pos = g_pos + 1
            skip_whitespace()
            g_op_scale = read_number()
          else:
            g_op_scale = 1

          skip_whitespace()
          # Check for additional displacement
          if g_source[g_pos] == cast[uint8](43) or g_source[g_pos] == cast[uint8](45):
            var neg2: int32 = 0
            if g_source[g_pos] == cast[uint8](45):
              neg2 = 1
            g_pos = g_pos + 1
            skip_whitespace()
            g_op_disp = read_number()
            if neg2 == 1:
              g_op_disp = 0 - g_op_disp
            g_op_type = 6  # [base + index*scale + disp]
          else:
            g_op_type = 5  # [base + index*scale]
        else:
          # Not a register, treat as displacement (error fallback)
          g_op_type = 3
          g_op_disp = 0
    else:
      g_op_type = 2  # [reg]

    skip_whitespace()
    if g_source[g_pos] == cast[uint8](93):  # ']'
      g_pos = g_pos + 1
    return

  # Try register
  read_ident()
  g_op_reg = parse_register(g_token_buf)
  if g_op_reg >= 0:
    g_op_type = 0  # register
    return

  # Must be a symbol (bare symbol = load address, type 8)
  g_op_sym = find_symbol(g_token_buf)
  if g_op_sym < 0:
    # Create undefined symbol
    var name: ptr uint8 = cast[ptr uint8](cast[int32](g_data) + g_data_cap - 1024 - g_sym_count * 64)
    strcpy(name, g_token_buf)
    g_op_sym = add_symbol(name, 0, SYM_UNDEFINED, SYM_EXTERN)
  g_op_type = 8  # symbol address (bare symbol, load address as imm32)

proc expect_comma() =
  skip_whitespace()
  if g_source[g_pos] == cast[uint8](44):  # ','
    g_pos = g_pos + 1

proc parse_line_pass2() =
  skip_whitespace()

  if g_pos >= g_source_len:
    return
  if g_source[g_pos] == cast[uint8](10):
    g_pos = g_pos + 1
    g_line = g_line + 1
    return
  if g_source[g_pos] == cast[uint8](59):  # ';' comment
    skip_line()
    return

  # Read identifier (could be label or instruction)
  read_ident()
  skip_whitespace()

  # Handle labels - update symbol value with current offset
  if g_source[g_pos] == cast[uint8](58):  # ':'
    # Update symbol's value to current offset
    var sym_idx: int32 = find_symbol(g_token_buf)
    if sym_idx >= 0:
      set_symbol_value(sym_idx, current_offset())
      set_symbol_section(sym_idx, g_current_section)
      set_symbol_pass2_defined(sym_idx, 1)
    g_pos = g_pos + 1
    skip_whitespace()
    if g_source[g_pos] == cast[uint8](10) or g_pos >= g_source_len:
      if g_pos < g_source_len:
        g_pos = g_pos + 1
        g_line = g_line + 1
      return
    read_ident()
    skip_whitespace()

  # Handle directives
  if strcmp(g_token_buf, cast[ptr uint8]("section")) == 0:
    skip_whitespace()
    read_ident()
    if strcmp(g_token_buf, cast[ptr uint8](".text")) == 0:
      g_current_section = SYM_TEXT
    else:
      if strcmp(g_token_buf, cast[ptr uint8](".data")) == 0:
        g_current_section = SYM_DATA
      else:
        if strcmp(g_token_buf, cast[ptr uint8](".bss")) == 0:
          g_current_section = SYM_BSS
    skip_line()
    return

  if strcmp(g_token_buf, cast[ptr uint8]("global")) == 0:
    skip_line()
    return

  if strcmp(g_token_buf, cast[ptr uint8]("extern")) == 0:
    skip_line()
    return

  if strcmp(g_token_buf, cast[ptr uint8]("bits")) == 0:
    skip_line()
    return

  # Data directives
  if strcmp(g_token_buf, cast[ptr uint8]("db")) == 0:
    skip_whitespace()
    while g_pos < g_source_len and g_source[g_pos] != cast[uint8](10):
      skip_whitespace()
      if g_source[g_pos] == cast[uint8](34):  # '"' string
        g_pos = g_pos + 1
        while g_pos < g_source_len and g_source[g_pos] != cast[uint8](34):
          var c: uint8 = g_source[g_pos]
          if c == cast[uint8](92):  # backslash
            g_pos = g_pos + 1
            c = g_source[g_pos]
            if c == cast[uint8](110):  # \n
              c = cast[uint8](10)
            else:
              if c == cast[uint8](114):  # \r
                c = cast[uint8](13)
              else:
                if c == cast[uint8](116):  # \t
                  c = cast[uint8](9)
                else:
                  if c == cast[uint8](48):  # \0
                    c = cast[uint8](0)
          emit_byte(c)
          g_pos = g_pos + 1
        if g_source[g_pos] == cast[uint8](34):
          g_pos = g_pos + 1
      else:
        if is_digit(g_source[g_pos]) == 1 or g_source[g_pos] == cast[uint8](45):
          var val: int32 = read_number()
          emit_byte(cast[uint8](val))
      skip_whitespace()
      if g_source[g_pos] == cast[uint8](44):
        g_pos = g_pos + 1
    skip_line()
    return

  if strcmp(g_token_buf, cast[ptr uint8]("dd")) == 0:
    skip_whitespace()
    while g_pos < g_source_len and g_source[g_pos] != cast[uint8](10):
      skip_whitespace()
      var val: int32 = read_number()
      emit_dword(val)
      skip_whitespace()
      if g_source[g_pos] == cast[uint8](44):
        g_pos = g_pos + 1
    skip_line()
    return

  if strcmp(g_token_buf, cast[ptr uint8]("resd")) == 0:
    skip_whitespace()
    var count: int32 = read_number()
    g_bss_len = g_bss_len + count * 4
    skip_line()
    return

  if strcmp(g_token_buf, cast[ptr uint8]("resb")) == 0:
    skip_whitespace()
    var count: int32 = read_number()
    g_bss_len = g_bss_len + count
    skip_line()
    return

  # Instructions
  if strcmp(g_token_buf, cast[ptr uint8]("mov")) == 0:
    parse_operand()
    var dst_type: int32 = g_op_type
    var dst_reg: int32 = g_op_reg
    var dst_disp: int32 = g_op_disp
    var dst_sym: int32 = g_op_sym
    var dst_index: int32 = g_op_index
    var dst_scale: int32 = g_op_scale
    var dst_size: int32 = g_op_size
    expect_comma()
    parse_operand()

    if dst_type == 0:  # dst is register
      if g_op_type == 0:  # src is register
        encode_mov_reg_reg(dst_reg, g_op_reg)
      else:
        if g_op_type == 1:  # src is immediate
          encode_mov_reg_imm(dst_reg, g_op_disp)
        else:
          if g_op_type == 2:  # src is [reg]
            encode_mov_reg_mem(dst_reg, g_op_reg)
          else:
            if g_op_type == 3:  # src is [reg+disp]
              encode_mov_reg_mem_disp(dst_reg, g_op_reg, g_op_disp)
            else:
              if g_op_type == 4:  # src is [symbol] (memory access)
                encode_mov_reg_mem_sym(dst_reg, g_op_sym)
              else:
                if g_op_type == 5:  # src is [base+index*scale]
                  encode_mov_reg_sib(dst_reg, g_op_reg, g_op_index, g_op_scale)
                else:
                  if g_op_type == 6:  # src is [base+index*scale+disp]
                    encode_mov_reg_sib_disp(dst_reg, g_op_reg, g_op_index, g_op_scale, g_op_disp)
                  else:
                    if g_op_type == 8:  # src is symbol address (load addr as imm)
                      encode_mov_reg_imm_sym(dst_reg, g_op_sym)
    else:
      if dst_type == 2:  # dst is [reg]
        if dst_size == 1:
          encode_mov_mem_reg8(dst_reg, g_op_reg)
        else:
          encode_mov_mem_reg(dst_reg, g_op_reg)
      else:
        if dst_type == 3:  # dst is [reg+disp]
          if dst_size == 1:
            encode_mov_mem_disp_reg8(dst_reg, dst_disp, g_op_reg)
          else:
            if dst_size == 2:
              encode_mov_mem_disp_reg16(dst_reg, dst_disp, g_op_reg)
            else:
              encode_mov_mem_disp_reg(dst_reg, dst_disp, g_op_reg)
        else:
          if dst_type == 4:  # dst is symbol
            encode_mov_sym_reg(dst_sym, g_op_reg)
          else:
            if dst_type == 5:  # dst is [base+index*scale]
              encode_mov_sib_reg(dst_reg, dst_index, dst_scale, g_op_reg)
            else:
              if dst_type == 6:  # dst is [base+index*scale+disp]
                encode_mov_sib_disp_reg(dst_reg, dst_index, dst_scale, dst_disp, g_op_reg)
    skip_line()
    return

  if strcmp(g_token_buf, cast[ptr uint8]("push")) == 0:
    parse_operand()
    if g_op_type == 0:
      encode_push_reg(g_op_reg)
    else:
      if g_op_type == 1:
        encode_push_imm(g_op_disp)
      else:
        if g_op_type == 4:
          encode_push_sym(g_op_sym)
        else:
          if g_op_type == 8:
            # push sym - push symbol address as immediate
            encode_push_imm_sym(g_op_sym)
    skip_line()
    return

  if strcmp(g_token_buf, cast[ptr uint8]("pop")) == 0:
    parse_operand()
    encode_pop_reg(g_op_reg)
    skip_line()
    return

  if strcmp(g_token_buf, cast[ptr uint8]("call")) == 0:
    parse_operand()
    if g_op_type == 4 or g_op_type == 8:
      encode_call_rel(g_op_sym)
    skip_line()
    return

  if strcmp(g_token_buf, cast[ptr uint8]("ret")) == 0:
    encode_ret()
    skip_line()
    return

  if strcmp(g_token_buf, cast[ptr uint8]("add")) == 0:
    parse_operand()
    var dst_reg: int32 = g_op_reg
    expect_comma()
    parse_operand()
    if g_op_type == 0:
      encode_add_reg_reg(dst_reg, g_op_reg)
    else:
      encode_add_reg_imm(dst_reg, g_op_disp)
    skip_line()
    return

  if strcmp(g_token_buf, cast[ptr uint8]("sub")) == 0:
    parse_operand()
    var dst_reg: int32 = g_op_reg
    expect_comma()
    parse_operand()
    if g_op_type == 0:
      encode_sub_reg_reg(dst_reg, g_op_reg)
    else:
      encode_sub_reg_imm(dst_reg, g_op_disp)
    skip_line()
    return

  if strcmp(g_token_buf, cast[ptr uint8]("xor")) == 0:
    parse_operand()
    var dst_reg: int32 = g_op_reg
    expect_comma()
    parse_operand()
    encode_xor_reg_reg(dst_reg, g_op_reg)
    skip_line()
    return

  if strcmp(g_token_buf, cast[ptr uint8]("and")) == 0:
    parse_operand()
    var dst_reg: int32 = g_op_reg
    expect_comma()
    parse_operand()
    encode_and_reg_reg(dst_reg, g_op_reg)
    skip_line()
    return

  if strcmp(g_token_buf, cast[ptr uint8]("or")) == 0:
    parse_operand()
    var dst_reg: int32 = g_op_reg
    expect_comma()
    parse_operand()
    encode_or_reg_reg(dst_reg, g_op_reg)
    skip_line()
    return

  if strcmp(g_token_buf, cast[ptr uint8]("cmp")) == 0:
    parse_operand()
    var dst_reg: int32 = g_op_reg
    expect_comma()
    parse_operand()
    if g_op_type == 0:
      encode_cmp_reg_reg(dst_reg, g_op_reg)
    else:
      encode_cmp_reg_imm(dst_reg, g_op_disp)
    skip_line()
    return

  if strcmp(g_token_buf, cast[ptr uint8]("test")) == 0:
    parse_operand()
    var dst_reg: int32 = g_op_reg
    expect_comma()
    parse_operand()
    encode_test_reg_reg(dst_reg, g_op_reg)
    skip_line()
    return

  if strcmp(g_token_buf, cast[ptr uint8]("lea")) == 0:
    parse_operand()
    var dst_reg: int32 = g_op_reg
    expect_comma()
    parse_operand()
    if g_op_type == 2:
      # lea reg, [base] - same as mov reg, base but with 0 displacement
      encode_lea_reg_mem_disp(dst_reg, g_op_reg, 0)
    else:
      if g_op_type == 3:
        encode_lea_reg_mem_disp(dst_reg, g_op_reg, g_op_disp)
      else:
        if g_op_type == 4:
          encode_lea_reg_sym(dst_reg, g_op_sym)
        else:
          if g_op_type == 5:
            encode_lea_reg_sib(dst_reg, g_op_reg, g_op_index, g_op_scale)
          else:
            if g_op_type == 6:
              encode_lea_reg_sib_disp(dst_reg, g_op_reg, g_op_index, g_op_scale, g_op_disp)
    skip_line()
    return

  if strcmp(g_token_buf, cast[ptr uint8]("int")) == 0:
    skip_whitespace()
    var n: int32 = read_number()
    encode_int(n)
    skip_line()
    return

  if strcmp(g_token_buf, cast[ptr uint8]("jmp")) == 0:
    parse_operand()
    encode_jmp_rel(g_op_sym)
    skip_line()
    return

  if strcmp(g_token_buf, cast[ptr uint8]("je")) == 0:
    parse_operand()
    encode_je_rel(g_op_sym)
    skip_line()
    return

  if strcmp(g_token_buf, cast[ptr uint8]("jz")) == 0:
    parse_operand()
    encode_jz_rel(g_op_sym)
    skip_line()
    return

  if strcmp(g_token_buf, cast[ptr uint8]("jne")) == 0:
    parse_operand()
    encode_jne_rel(g_op_sym)
    skip_line()
    return

  if strcmp(g_token_buf, cast[ptr uint8]("jnz")) == 0:
    parse_operand()
    encode_jnz_rel(g_op_sym)
    skip_line()
    return

  if strcmp(g_token_buf, cast[ptr uint8]("jl")) == 0:
    parse_operand()
    encode_jl_rel(g_op_sym)
    skip_line()
    return

  if strcmp(g_token_buf, cast[ptr uint8]("jg")) == 0:
    parse_operand()
    encode_jg_rel(g_op_sym)
    skip_line()
    return

  if strcmp(g_token_buf, cast[ptr uint8]("jle")) == 0:
    parse_operand()
    encode_jle_rel(g_op_sym)
    skip_line()
    return

  if strcmp(g_token_buf, cast[ptr uint8]("jge")) == 0:
    parse_operand()
    encode_jge_rel(g_op_sym)
    skip_line()
    return

  if strcmp(g_token_buf, cast[ptr uint8]("inc")) == 0:
    parse_operand()
    encode_inc_reg(g_op_reg)
    skip_line()
    return

  if strcmp(g_token_buf, cast[ptr uint8]("dec")) == 0:
    parse_operand()
    encode_dec_reg(g_op_reg)
    skip_line()
    return

  if strcmp(g_token_buf, cast[ptr uint8]("neg")) == 0:
    parse_operand()
    encode_neg_reg(g_op_reg)
    skip_line()
    return

  if strcmp(g_token_buf, cast[ptr uint8]("not")) == 0:
    parse_operand()
    encode_not_reg(g_op_reg)
    skip_line()
    return

  if strcmp(g_token_buf, cast[ptr uint8]("imul")) == 0:
    parse_operand()
    var dst_reg: int32 = g_op_reg
    expect_comma()
    parse_operand()
    encode_imul_reg_reg(dst_reg, g_op_reg)
    skip_line()
    return

  if strcmp(g_token_buf, cast[ptr uint8]("idiv")) == 0:
    parse_operand()
    encode_idiv_reg(g_op_reg)
    skip_line()
    return

  if strcmp(g_token_buf, cast[ptr uint8]("cdq")) == 0:
    encode_cdq()
    skip_line()
    return

  if strcmp(g_token_buf, cast[ptr uint8]("nop")) == 0:
    encode_nop()
    skip_line()
    return

  if strcmp(g_token_buf, cast[ptr uint8]("setne")) == 0:
    encode_setne_al()
    skip_whitespace()
    read_ident()  # consume 'al'
    skip_line()
    return

  if strcmp(g_token_buf, cast[ptr uint8]("sete")) == 0:
    encode_sete_al()
    skip_whitespace()
    read_ident()
    skip_line()
    return

  if strcmp(g_token_buf, cast[ptr uint8]("setl")) == 0:
    encode_setl_al()
    skip_whitespace()
    read_ident()
    skip_line()
    return

  if strcmp(g_token_buf, cast[ptr uint8]("setg")) == 0:
    encode_setg_al()
    skip_whitespace()
    read_ident()
    skip_line()
    return

  if strcmp(g_token_buf, cast[ptr uint8]("setle")) == 0:
    encode_setle_al()
    skip_whitespace()
    read_ident()
    skip_line()
    return

  if strcmp(g_token_buf, cast[ptr uint8]("setge")) == 0:
    encode_setge_al()
    skip_whitespace()
    read_ident()
    skip_line()
    return

  if strcmp(g_token_buf, cast[ptr uint8]("movzx")) == 0:
    parse_operand()
    var dst_reg: int32 = g_op_reg
    expect_comma()
    skip_whitespace()
    # Skip 'byte' keyword if present
    if g_source[g_pos] == cast[uint8](98):  # 'b'
      read_ident()
      skip_whitespace()
    parse_operand()
    if g_op_type == 0:  # register source (e.g., movzx eax, al)
      encode_movzx_reg_reg8(dst_reg, g_op_reg)
    else:
      if g_op_type == 2:
        encode_movzx_reg_byte(dst_reg, g_op_reg)
      else:
        if g_op_type == 3:
          encode_movzx_reg_byte_disp(dst_reg, g_op_reg, g_op_disp)
    skip_line()
    return

  if strcmp(g_token_buf, cast[ptr uint8]("shl")) == 0:
    parse_operand()
    var dst_reg: int32 = g_op_reg
    expect_comma()
    parse_operand()
    encode_shl_reg_imm(dst_reg, g_op_disp)
    skip_line()
    return

  if strcmp(g_token_buf, cast[ptr uint8]("shr")) == 0:
    parse_operand()
    var dst_reg: int32 = g_op_reg
    expect_comma()
    parse_operand()
    encode_shr_reg_imm(dst_reg, g_op_disp)
    skip_line()
    return

  # Unknown instruction - skip
  skip_line()

# ============================================================================
# ELF Object File Writer
# ============================================================================

# ELF32 header constants
const ELF_MAGIC: int32 = 0x464C457F  # "\x7fELF"
const ET_REL: int32 = 1
const EM_386: int32 = 3
const EV_CURRENT: int32 = 1

# Section header types
const SHT_NULL: int32 = 0
const SHT_PROGBITS: int32 = 1
const SHT_SYMTAB: int32 = 2
const SHT_STRTAB: int32 = 3
const SHT_REL: int32 = 9
const SHT_NOBITS: int32 = 8

# Section flags
const SHF_WRITE: int32 = 1
const SHF_ALLOC: int32 = 2
const SHF_EXECINSTR: int32 = 4

proc write_elf_object(filename: ptr uint8): int32 =
  # Open output file
  var fd: int32 = syscall3(SYS_open, cast[int32](filename), O_WRONLY + O_CREAT + O_TRUNC, 420)  # 0644
  if fd < 0:
    return -1

  # Calculate sizes
  # Section name string table (54 bytes total)
  var shstrtab_size: int32 = 54  # .shstrtab, .text, .data, .bss, .symtab, .strtab, .rel.text

  # String table for symbols
  var strtab_size: int32 = 1  # Start with null byte
  var i: int32 = 0
  while i < g_sym_count:
    var entry: ptr uint8 = cast[ptr uint8](cast[int32](g_symbols) + i * 32)
    var name_ptr: ptr int32 = cast[ptr int32](entry)
    var name: ptr uint8 = cast[ptr uint8](name_ptr[0])
    strtab_size = strtab_size + strlen(name) + 1
    i = i + 1

  # Symbol table size
  var symtab_size: int32 = (g_sym_count + 1) * 16  # +1 for null entry

  # Relocation table size
  var rel_size: int32 = g_reloc_count * 8

  # Calculate offsets
  var ehdr_size: int32 = 52
  var shdr_size: int32 = 40
  var num_sections: int32 = 7  # null, .text, .data, .bss, .symtab, .strtab, .shstrtab

  if g_reloc_count > 0:
    num_sections = 8  # add .rel.text

  var text_offset: int32 = ehdr_size
  var data_offset: int32 = text_offset + g_text_len
  var strtab_offset: int32 = data_offset + g_data_len
  var symtab_offset: int32 = strtab_offset + strtab_size
  var shstrtab_offset: int32 = symtab_offset + symtab_size
  var rel_offset: int32 = shstrtab_offset + shstrtab_size
  var shdr_offset: int32 = rel_offset + rel_size

  # Align section header to 4 bytes
  shdr_offset = (shdr_offset + 3) & (0 - 4)

  # Write ELF header
  var ehdr: array[52, uint8]
  memset(cast[ptr uint8](addr(ehdr)), cast[uint8](0), 52)

  # Magic number
  ehdr[0] = cast[uint8](0x7F)
  ehdr[1] = cast[uint8](69)   # 'E'
  ehdr[2] = cast[uint8](76)   # 'L'
  ehdr[3] = cast[uint8](70)   # 'F'
  ehdr[4] = cast[uint8](1)    # 32-bit
  ehdr[5] = cast[uint8](1)    # Little endian
  ehdr[6] = cast[uint8](1)    # ELF version

  # e_type = ET_REL
  ehdr[16] = cast[uint8](1)
  ehdr[17] = cast[uint8](0)

  # e_machine = EM_386
  ehdr[18] = cast[uint8](3)
  ehdr[19] = cast[uint8](0)

  # e_version = 1
  ehdr[20] = cast[uint8](1)

  # e_ehsize = 52
  ehdr[40] = cast[uint8](52)
  ehdr[41] = cast[uint8](0)

  # e_shentsize = 40
  ehdr[46] = cast[uint8](40)
  ehdr[47] = cast[uint8](0)

  # e_shnum
  ehdr[48] = cast[uint8](num_sections)
  ehdr[49] = cast[uint8](0)

  # e_shstrndx = 6 (.shstrtab is always section 6)
  ehdr[50] = cast[uint8](6)
  ehdr[51] = cast[uint8](0)

  # e_shoff
  var shoff_ptr: ptr int32 = cast[ptr int32](cast[int32](addr(ehdr)) + 32)
  shoff_ptr[0] = shdr_offset

  discard syscall3(SYS_write, fd, cast[int32](addr(ehdr)), 52)

  # Write .text section
  if g_text_len > 0:
    discard syscall3(SYS_write, fd, cast[int32](g_text), g_text_len)

  # Write .data section
  if g_data_len > 0:
    discard syscall3(SYS_write, fd, cast[int32](g_data), g_data_len)

  # Write string table (increased from 4096 to handle large programs)
  var strtab: array[65536, uint8]
  strtab[0] = cast[uint8](0)  # Null string
  var str_pos: int32 = 1
  i = 0
  while i < g_sym_count:
    var entry: ptr uint8 = cast[ptr uint8](cast[int32](g_symbols) + i * 32)
    var name_ptr: ptr int32 = cast[ptr int32](entry)
    var name: ptr uint8 = cast[ptr uint8](name_ptr[0])

    # Store string offset in symbol entry (reuse offset 16)
    var stroff_ptr: ptr int32 = cast[ptr int32](cast[int32](entry) + 16)
    stroff_ptr[0] = str_pos

    var nlen: int32 = strlen(name)
    memcpy(cast[ptr uint8](cast[int32](addr(strtab)) + str_pos), name, nlen + 1)
    str_pos = str_pos + nlen + 1
    i = i + 1

  discard syscall3(SYS_write, fd, cast[int32](addr(strtab)), str_pos)

  # Write symbol table (local symbols first, then global)
  var symtab: array[32768, uint8]
  memset(cast[ptr uint8](addr(symtab)), cast[uint8](0), symtab_size)

  # First entry is null
  var sym_pos: int32 = 16
  var num_local: int32 = 1  # Count null entry as local

  # First pass: write local symbols and record new indices
  var new_sym_idx: int32 = 1  # Start after null entry
  i = 0
  while i < g_sym_count:
    var entry: ptr uint8 = cast[ptr uint8](cast[int32](g_symbols) + i * 32)
    var type_ptr: ptr int32 = cast[ptr int32](cast[int32](entry) + 12)
    var sym_type: int32 = type_ptr[0]

    if sym_type == SYM_LOCAL:
      var stroff_ptr: ptr int32 = cast[ptr int32](cast[int32](entry) + 16)
      var str_offset: int32 = stroff_ptr[0]
      var value_ptr: ptr int32 = cast[ptr int32](cast[int32](entry) + 4)
      var sym_value: int32 = value_ptr[0]
      var section_ptr: ptr int32 = cast[ptr int32](cast[int32](entry) + 8)
      var sym_section: int32 = section_ptr[0]

      var st_name: ptr int32 = cast[ptr int32](cast[int32](addr(symtab)) + sym_pos)
      st_name[0] = str_offset
      var st_value: ptr int32 = cast[ptr int32](cast[int32](addr(symtab)) + sym_pos + 4)
      st_value[0] = sym_value
      symtab[sym_pos + 12] = cast[uint8](0)  # STB_LOCAL

      var shndx: int32 = 0
      if sym_section == SYM_TEXT:
        shndx = 1
      else:
        if sym_section == SYM_DATA:
          shndx = 2
        else:
          if sym_section == SYM_BSS:
            shndx = 3
      symtab[sym_pos + 14] = cast[uint8](shndx & 255)
      symtab[sym_pos + 15] = cast[uint8]((shndx >> 8) & 255)

      # Store new symbol index at offset 20 in entry
      var new_idx_ptr: ptr int32 = cast[ptr int32](cast[int32](entry) + 20)
      new_idx_ptr[0] = new_sym_idx

      sym_pos = sym_pos + 16
      num_local = num_local + 1
      new_sym_idx = new_sym_idx + 1
    i = i + 1

  # Second pass: write global/extern symbols and record new indices
  i = 0
  while i < g_sym_count:
    var entry: ptr uint8 = cast[ptr uint8](cast[int32](g_symbols) + i * 32)
    var type_ptr: ptr int32 = cast[ptr int32](cast[int32](entry) + 12)
    var sym_type: int32 = type_ptr[0]

    if sym_type == SYM_GLOBAL or sym_type == SYM_EXTERN:
      var stroff_ptr: ptr int32 = cast[ptr int32](cast[int32](entry) + 16)
      var str_offset: int32 = stroff_ptr[0]
      var value_ptr: ptr int32 = cast[ptr int32](cast[int32](entry) + 4)
      var sym_value: int32 = value_ptr[0]
      var section_ptr: ptr int32 = cast[ptr int32](cast[int32](entry) + 8)
      var sym_section: int32 = section_ptr[0]

      var st_name: ptr int32 = cast[ptr int32](cast[int32](addr(symtab)) + sym_pos)
      st_name[0] = str_offset
      var st_value: ptr int32 = cast[ptr int32](cast[int32](addr(symtab)) + sym_pos + 4)
      st_value[0] = sym_value
      symtab[sym_pos + 12] = cast[uint8](16)  # STB_GLOBAL << 4

      var shndx: int32 = 0
      if sym_section == SYM_TEXT:
        shndx = 1
      else:
        if sym_section == SYM_DATA:
          shndx = 2
        else:
          if sym_section == SYM_BSS:
            shndx = 3
      symtab[sym_pos + 14] = cast[uint8](shndx & 255)
      symtab[sym_pos + 15] = cast[uint8]((shndx >> 8) & 255)

      # Store new symbol index at offset 20 in entry
      var new_idx_ptr: ptr int32 = cast[ptr int32](cast[int32](entry) + 20)
      new_idx_ptr[0] = new_sym_idx

      sym_pos = sym_pos + 16
      new_sym_idx = new_sym_idx + 1
    i = i + 1

  # Store num_local for sh_info
  var g_num_local: int32 = num_local

  discard syscall3(SYS_write, fd, cast[int32](addr(symtab)), symtab_size)

  # Write section header string table
  var shstrtab: array[64, uint8]
  # 0: ""
  shstrtab[0] = cast[uint8](0)
  # 1: ".text"
  shstrtab[1] = cast[uint8](46)
  shstrtab[2] = cast[uint8](116)
  shstrtab[3] = cast[uint8](101)
  shstrtab[4] = cast[uint8](120)
  shstrtab[5] = cast[uint8](116)
  shstrtab[6] = cast[uint8](0)
  # 7: ".data"
  shstrtab[7] = cast[uint8](46)
  shstrtab[8] = cast[uint8](100)
  shstrtab[9] = cast[uint8](97)
  shstrtab[10] = cast[uint8](116)
  shstrtab[11] = cast[uint8](97)
  shstrtab[12] = cast[uint8](0)
  # 13: ".bss"
  shstrtab[13] = cast[uint8](46)
  shstrtab[14] = cast[uint8](98)
  shstrtab[15] = cast[uint8](115)
  shstrtab[16] = cast[uint8](115)
  shstrtab[17] = cast[uint8](0)
  # 18: ".symtab"
  shstrtab[18] = cast[uint8](46)
  shstrtab[19] = cast[uint8](115)
  shstrtab[20] = cast[uint8](121)
  shstrtab[21] = cast[uint8](109)
  shstrtab[22] = cast[uint8](116)
  shstrtab[23] = cast[uint8](97)
  shstrtab[24] = cast[uint8](98)
  shstrtab[25] = cast[uint8](0)
  # 26: ".strtab"
  shstrtab[26] = cast[uint8](46)
  shstrtab[27] = cast[uint8](115)
  shstrtab[28] = cast[uint8](116)
  shstrtab[29] = cast[uint8](114)
  shstrtab[30] = cast[uint8](116)
  shstrtab[31] = cast[uint8](97)
  shstrtab[32] = cast[uint8](98)
  shstrtab[33] = cast[uint8](0)
  # 34: ".shstrtab"
  shstrtab[34] = cast[uint8](46)
  shstrtab[35] = cast[uint8](115)
  shstrtab[36] = cast[uint8](104)
  shstrtab[37] = cast[uint8](115)
  shstrtab[38] = cast[uint8](116)
  shstrtab[39] = cast[uint8](114)
  shstrtab[40] = cast[uint8](116)
  shstrtab[41] = cast[uint8](97)
  shstrtab[42] = cast[uint8](98)
  shstrtab[43] = cast[uint8](0)
  # 44: ".rel.text"
  shstrtab[44] = cast[uint8](46)
  shstrtab[45] = cast[uint8](114)
  shstrtab[46] = cast[uint8](101)
  shstrtab[47] = cast[uint8](108)
  shstrtab[48] = cast[uint8](46)
  shstrtab[49] = cast[uint8](116)
  shstrtab[50] = cast[uint8](101)
  shstrtab[51] = cast[uint8](120)
  shstrtab[52] = cast[uint8](116)
  shstrtab[53] = cast[uint8](0)

  discard syscall3(SYS_write, fd, cast[int32](addr(shstrtab)), 54)

  # Write relocations
  if g_reloc_count > 0:
    var rel: array[8192, uint8]
    var rel_pos: int32 = 0
    i = 0
    while i < g_reloc_count:
      var reloc_entry: ptr uint8 = cast[ptr uint8](cast[int32](g_relocs) + i * 16)
      var p: ptr int32 = cast[ptr int32](reloc_entry)

      var r_offset: int32 = p[0]
      var r_sym: int32 = p[1]
      var r_type: int32 = p[2]

      # r_offset
      var rel_p: ptr int32 = cast[ptr int32](cast[int32](addr(rel)) + rel_pos)
      rel_p[0] = r_offset

      # Get the new symbol index from the symbol entry (stored at offset 20)
      var sym_entry: ptr uint8 = cast[ptr uint8](cast[int32](g_symbols) + r_sym * 32)
      var new_idx_ptr: ptr int32 = cast[ptr int32](cast[int32](sym_entry) + 20)
      var new_sym_idx: int32 = new_idx_ptr[0]

      # r_info = (sym << 8) | type
      var rel_info: ptr int32 = cast[ptr int32](cast[int32](addr(rel)) + rel_pos + 4)
      rel_info[0] = (new_sym_idx << 8) | r_type

      rel_pos = rel_pos + 8
      i = i + 1

    discard syscall3(SYS_write, fd, cast[int32](addr(rel)), rel_pos)

  # Pad to alignment
  var padding: int32 = shdr_offset - (rel_offset + rel_size)
  if padding > 0:
    var pad: array[4, uint8]
    memset(cast[ptr uint8](addr(pad)), cast[uint8](0), 4)
    discard syscall3(SYS_write, fd, cast[int32](addr(pad)), padding)

  # Write section headers
  var shdr: array[320, uint8]  # 8 * 40
  memset(cast[ptr uint8](addr(shdr)), cast[uint8](0), 320)

  # Section 0: NULL
  # (already zeroed)

  # Section 1: .text
  var sh: ptr int32 = cast[ptr int32](cast[int32](addr(shdr)) + 40)
  sh[0] = 1  # sh_name
  sh[1] = SHT_PROGBITS
  sh[2] = SHF_ALLOC + SHF_EXECINSTR
  sh[3] = 0  # sh_addr
  sh[4] = text_offset
  sh[5] = g_text_len
  sh[6] = 0  # sh_link
  sh[7] = 0  # sh_info
  sh[8] = 16  # sh_addralign
  sh[9] = 0  # sh_entsize

  # Section 2: .data
  sh = cast[ptr int32](cast[int32](addr(shdr)) + 80)
  sh[0] = 7  # sh_name
  sh[1] = SHT_PROGBITS
  sh[2] = SHF_ALLOC + SHF_WRITE
  sh[3] = 0
  sh[4] = data_offset
  sh[5] = g_data_len
  sh[6] = 0
  sh[7] = 0
  sh[8] = 4
  sh[9] = 0

  # Section 3: .bss
  sh = cast[ptr int32](cast[int32](addr(shdr)) + 120)
  sh[0] = 13  # sh_name
  sh[1] = SHT_NOBITS
  sh[2] = SHF_ALLOC + SHF_WRITE
  sh[3] = 0
  sh[4] = data_offset + g_data_len
  sh[5] = g_bss_len
  sh[6] = 0
  sh[7] = 0
  sh[8] = 4
  sh[9] = 0

  # Section 4: .symtab
  sh = cast[ptr int32](cast[int32](addr(shdr)) + 160)
  sh[0] = 18  # sh_name
  sh[1] = SHT_SYMTAB
  sh[2] = 0
  sh[3] = 0
  sh[4] = symtab_offset
  sh[5] = symtab_size
  sh[6] = 5  # sh_link = .strtab section index
  sh[7] = g_num_local  # sh_info = index of first global symbol
  sh[8] = 4
  sh[9] = 16  # sh_entsize

  # Section 5: .strtab
  sh = cast[ptr int32](cast[int32](addr(shdr)) + 200)
  sh[0] = 26  # sh_name
  sh[1] = SHT_STRTAB
  sh[2] = 0
  sh[3] = 0
  sh[4] = strtab_offset
  sh[5] = str_pos
  sh[6] = 0
  sh[7] = 0
  sh[8] = 1
  sh[9] = 0

  # Section 6: .shstrtab
  sh = cast[ptr int32](cast[int32](addr(shdr)) + 240)
  sh[0] = 34  # sh_name
  sh[1] = SHT_STRTAB
  sh[2] = 0
  sh[3] = 0
  sh[4] = shstrtab_offset
  sh[5] = 54
  sh[6] = 0
  sh[7] = 0
  sh[8] = 1
  sh[9] = 0

  # Section 7: .rel.text (if any relocations)
  if g_reloc_count > 0:
    sh = cast[ptr int32](cast[int32](addr(shdr)) + 280)
    sh[0] = 44  # sh_name
    sh[1] = SHT_REL
    sh[2] = 0
    sh[3] = 0
    sh[4] = rel_offset
    sh[5] = rel_size
    sh[6] = 4  # sh_link = .symtab section index
    sh[7] = 1  # sh_info = .text section index
    sh[8] = 4
    sh[9] = 8  # sh_entsize

  discard syscall3(SYS_write, fd, cast[int32](addr(shdr)), num_sections * 40)

  discard syscall1(SYS_close, fd)
  return 0

# ============================================================================
# Main
# ============================================================================

proc main(): int32 =
  var argc: int32 = get_argc()

  println(cast[ptr uint8]("basm - Brainhair Assembler v0.1"))

  if argc < 3:
    println(cast[ptr uint8]("Usage: basm <input.asm> <output.o>"))
    return 1

  var input_file: ptr uint8 = get_argv(1)
  var output_file: ptr uint8 = get_argv(2)

  # Allocate memory
  var old_brk: int32 = syscall1(SYS_brk, 0)
  var new_brk: int32 = old_brk + 1048576  # 1MB
  discard syscall1(SYS_brk, new_brk)

  # Layout:
  # 0-256KB: source buffer
  # 256KB-512KB: text section
  # 512KB-768KB: data section
  # 768KB-832KB: symbol table (2048 entries * 32 bytes)
  # 832KB-896KB: relocation table (4096 entries * 16 bytes)
  # 896KB-900KB: token buffer
  # 900KB onwards: name storage (interleaved with data section end)

  g_source = cast[ptr uint8](old_brk)
  g_text = cast[ptr uint8](old_brk + 262144)
  g_text_cap = 262144
  g_data = cast[ptr uint8](old_brk + 524288)
  g_data_cap = 262144
  g_symbols = cast[ptr uint8](old_brk + 786432)
  g_sym_cap = 2048
  g_relocs = cast[ptr uint8](old_brk + 851968)
  g_reloc_cap = 4096
  g_token_buf = cast[ptr uint8](old_brk + 917504)

  g_text_len = 0
  g_data_len = 0
  g_bss_len = 0
  g_sym_count = 0
  g_reloc_count = 0
  g_current_section = SYM_TEXT
  g_error = 0
  g_line = 1

  # Read input file
  print(cast[ptr uint8]("  Reading "))
  println(input_file)

  var fd: int32 = syscall3(SYS_open, cast[int32](input_file), O_RDONLY, 0)
  if fd < 0:
    print_err(cast[ptr uint8]("Error: cannot open input file\n"))
    return 1

  g_source_len = 0
  var n: int32 = syscall3(SYS_read, fd, cast[int32](g_source), 262144)
  while n > 0:
    g_source_len = g_source_len + n
    n = syscall3(SYS_read, fd, cast[int32](g_source) + g_source_len, 262144 - g_source_len)
  discard syscall1(SYS_close, fd)

  print(cast[ptr uint8]("  Source: "))
  print_num(g_source_len)
  println(cast[ptr uint8](" bytes"))

  # Pass 1: Collect labels
  println(cast[ptr uint8]("  Pass 1: Collecting symbols..."))
  g_pos = 0
  while g_pos < g_source_len and g_error == 0:
    parse_line_pass1()

  print(cast[ptr uint8]("  Symbols: "))
  print_num(g_sym_count)
  println(cast[ptr uint8](""))

  if g_error != 0:
    return 1

  # Reset for pass 2
  g_pos = 0
  g_line = 1
  g_current_section = SYM_TEXT
  g_text_len = 0
  g_data_len = 0
  g_bss_len = 0
  clear_all_pass2_flags()

  # Pass 2: Generate code
  println(cast[ptr uint8]("  Pass 2: Generating code..."))
  while g_pos < g_source_len and g_error == 0:
    parse_line_pass2()

  if g_error != 0:
    return 1

  print(cast[ptr uint8]("  Text: "))
  print_num(g_text_len)
  println(cast[ptr uint8](" bytes"))

  print(cast[ptr uint8]("  Data: "))
  print_num(g_data_len)
  println(cast[ptr uint8](" bytes"))

  print(cast[ptr uint8]("  Relocations: "))
  print_num(g_reloc_count)
  println(cast[ptr uint8](""))

  # Write output ELF object file
  println(cast[ptr uint8]("  Writing ELF object file..."))
  var result: int32 = write_elf_object(output_file)
  if result != 0:
    print_err(cast[ptr uint8]("Error: failed to write output file\n"))
    return 1

  print(cast[ptr uint8]("  Output: "))
  println(output_file)
  println(cast[ptr uint8]("Done."))

  return 0
