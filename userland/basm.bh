# basm - Brainhair Assembler
# A native x86-32 assembler written in Brainhair
#
# Assembles NASM-style x86 assembly to ELF32 object files
#
# Usage: basm <input.asm> <output.o>
#
# Supported instructions:
#   mov, push, pop, call, ret, add, sub, lea, int
#   xor, and, or, cmp, test, jmp, je, jne, jl, jg, jle, jge
#   inc, dec, neg, not, shl, shr, sar, imul, idiv

import "lib/syscalls"

extern get_argc(): int32
extern get_argv(idx: int32): ptr uint8

# ============================================================================
# Utility Functions
# ============================================================================

proc print_err(msg: ptr uint8) =
  var len: int32 = 0
  while msg[len] != cast[uint8](0):
    len = len + 1
  discard syscall3(SYS_write, STDERR, cast[int32](msg), len)

proc print_num(n: int32) =
  var buf: array[12, uint8]
  var i: int32 = 10
  buf[11] = cast[uint8](0)
  if n == 0:
    buf[10] = cast[uint8](48)
    i = 10
  else:
    var num: int32 = n
    var neg: int32 = 0
    if num < 0:
      neg = 1
      num = 0 - num
    while num > 0 and i > 0:
      buf[i] = cast[uint8](48 + (num % 10))
      num = num / 10
      i = i - 1
    if neg == 1:
      buf[i] = cast[uint8](45)
      i = i - 1
    i = i + 1
  print(cast[ptr uint8](cast[int32](addr(buf)) + i))

# ============================================================================
# Register Encoding
# ============================================================================

# Register codes for ModR/M byte
const REG_EAX: int32 = 0
const REG_ECX: int32 = 1
const REG_EDX: int32 = 2
const REG_EBX: int32 = 3
const REG_ESP: int32 = 4
const REG_EBP: int32 = 5
const REG_ESI: int32 = 6
const REG_EDI: int32 = 7

# Parse register name, returns register code or -1 if not a register
proc parse_register(name: ptr uint8): int32 =
  if strcmp(name, cast[ptr uint8]("eax")) == 0:
    return REG_EAX
  if strcmp(name, cast[ptr uint8]("ecx")) == 0:
    return REG_ECX
  if strcmp(name, cast[ptr uint8]("edx")) == 0:
    return REG_EDX
  if strcmp(name, cast[ptr uint8]("ebx")) == 0:
    return REG_EBX
  if strcmp(name, cast[ptr uint8]("esp")) == 0:
    return REG_ESP
  if strcmp(name, cast[ptr uint8]("ebp")) == 0:
    return REG_EBP
  if strcmp(name, cast[ptr uint8]("esi")) == 0:
    return REG_ESI
  if strcmp(name, cast[ptr uint8]("edi")) == 0:
    return REG_EDI
  # 16-bit registers (use same numbers, instruction encoders know the size)
  if strcmp(name, cast[ptr uint8]("ax")) == 0:
    return REG_EAX
  if strcmp(name, cast[ptr uint8]("cx")) == 0:
    return REG_ECX
  if strcmp(name, cast[ptr uint8]("dx")) == 0:
    return REG_EDX
  if strcmp(name, cast[ptr uint8]("bx")) == 0:
    return REG_EBX
  if strcmp(name, cast[ptr uint8]("sp")) == 0:
    return REG_ESP
  if strcmp(name, cast[ptr uint8]("bp")) == 0:
    return REG_EBP
  if strcmp(name, cast[ptr uint8]("si")) == 0:
    return REG_ESI
  if strcmp(name, cast[ptr uint8]("di")) == 0:
    return REG_EDI
  # 8-bit registers (use same numbers, instruction encoders know the size)
  if strcmp(name, cast[ptr uint8]("al")) == 0:
    return REG_EAX
  if strcmp(name, cast[ptr uint8]("cl")) == 0:
    return REG_ECX
  if strcmp(name, cast[ptr uint8]("dl")) == 0:
    return REG_EDX
  if strcmp(name, cast[ptr uint8]("bl")) == 0:
    return REG_EBX
  return -1

# ============================================================================
# Assembler State
# ============================================================================

# Symbol table entry (32 bytes each)
# offset 0: name pointer (4 bytes)
# offset 4: value/offset (4 bytes)
# offset 8: section (4 bytes) - 0=undefined, 1=text, 2=data, 3=bss
# offset 12: type (4 bytes) - 0=local, 1=global, 2=extern
# offset 16-31: reserved

const SYM_UNDEFINED: int32 = 0
const SYM_TEXT: int32 = 1
const SYM_DATA: int32 = 2
const SYM_BSS: int32 = 3

const SYM_LOCAL: int32 = 0
const SYM_GLOBAL: int32 = 1
const SYM_EXTERN: int32 = 2

# Relocation entry (16 bytes each)
# offset 0: location offset (4 bytes)
# offset 4: symbol index (4 bytes)
# offset 8: type (4 bytes) - R_386_32=1, R_386_PC32=2
# offset 12: addend (4 bytes)

const R_386_32: int32 = 1
const R_386_PC32: int32 = 2

# Global assembler state
var g_source: ptr uint8      # Source buffer
var g_source_len: int32      # Source length
var g_pos: int32             # Current position in source
var g_line: int32            # Current line number

var g_text: ptr uint8        # .text section buffer
var g_text_len: int32        # .text section length
var g_text_cap: int32        # .text section capacity

var g_data: ptr uint8        # .data section buffer
var g_data_len: int32        # .data section length
var g_data_cap: int32        # .data section capacity

var g_bss_len: int32         # .bss section size (no actual data)

var g_symbols: ptr uint8     # Symbol table
var g_sym_count: int32       # Number of symbols
var g_sym_cap: int32         # Symbol table capacity

var g_relocs: ptr uint8      # Relocation table
var g_reloc_count: int32     # Number of relocations
var g_reloc_cap: int32       # Relocation table capacity

var g_current_section: int32 # Current section (1=text, 2=data, 3=bss)

var g_token_buf: ptr uint8   # Buffer for current token
var g_error: int32           # Error flag

# ============================================================================
# Lexer
# ============================================================================

proc is_alpha(c: uint8): int32 =
  if c >= cast[uint8](65) and c <= cast[uint8](90):
    return 1
  if c >= cast[uint8](97) and c <= cast[uint8](122):
    return 1
  if c == cast[uint8](95):  # underscore
    return 1
  return 0

proc is_digit(c: uint8): int32 =
  if c >= cast[uint8](48) and c <= cast[uint8](57):
    return 1
  return 0

proc is_hex(c: uint8): int32 =
  if is_digit(c) == 1:
    return 1
  if c >= cast[uint8](65) and c <= cast[uint8](70):
    return 1
  if c >= cast[uint8](97) and c <= cast[uint8](102):
    return 1
  return 0

proc is_whitespace(c: uint8): int32 =
  if c == cast[uint8](32) or c == cast[uint8](9):
    return 1
  return 0

proc skip_whitespace() =
  while g_pos < g_source_len:
    var c: uint8 = g_source[g_pos]
    if is_whitespace(c) == 0:
      break
    g_pos = g_pos + 1

proc skip_line() =
  while g_pos < g_source_len:
    if g_source[g_pos] == cast[uint8](10):
      g_pos = g_pos + 1
      g_line = g_line + 1
      return
    g_pos = g_pos + 1

# Read identifier or keyword into g_token_buf
proc read_ident() =
  var i: int32 = 0
  while g_pos < g_source_len and i < 255:
    var c: uint8 = g_source[g_pos]
    if is_alpha(c) == 1 or is_digit(c) == 1 or c == cast[uint8](46) or c == cast[uint8](36):
      g_token_buf[i] = c
      i = i + 1
      g_pos = g_pos + 1
    else:
      break
  g_token_buf[i] = cast[uint8](0)

# Read number into g_token_buf, returns the value
proc read_number(): int32 =
  var value: int32 = 0
  var neg: int32 = 0

  if g_source[g_pos] == cast[uint8](45):  # '-'
    neg = 1
    g_pos = g_pos + 1

  # Check for hex
  if g_source[g_pos] == cast[uint8](48):
    if g_pos + 1 < g_source_len:
      if g_source[g_pos + 1] == cast[uint8](120) or g_source[g_pos + 1] == cast[uint8](88):
        g_pos = g_pos + 2
        while g_pos < g_source_len and is_hex(g_source[g_pos]) == 1:
          var c: uint8 = g_source[g_pos]
          var digit: int32 = 0
          if c >= cast[uint8](48) and c <= cast[uint8](57):
            digit = cast[int32](c) - 48
          else:
            if c >= cast[uint8](65) and c <= cast[uint8](70):
              digit = cast[int32](c) - 55
            else:
              digit = cast[int32](c) - 87
          value = value * 16 + digit
          g_pos = g_pos + 1
        if neg == 1:
          value = 0 - value
        return value

  # Decimal
  while g_pos < g_source_len and is_digit(g_source[g_pos]) == 1:
    value = value * 10 + (cast[int32](g_source[g_pos]) - 48)
    g_pos = g_pos + 1

  if neg == 1:
    value = 0 - value
  return value

# ============================================================================
# Symbol Table
# ============================================================================

proc add_symbol(name: ptr uint8, value: int32, section: int32, sym_type: int32): int32 =
  if g_sym_count >= g_sym_cap:
    print_err(cast[ptr uint8]("Error: symbol table full\n"))
    g_error = 1
    return -1

  var entry: ptr uint8 = cast[ptr uint8](cast[int32](g_symbols) + g_sym_count * 32)

  # Store name pointer
  var name_ptr: ptr int32 = cast[ptr int32](entry)
  name_ptr[0] = cast[int32](name)

  # Store value
  var value_ptr: ptr int32 = cast[ptr int32](cast[int32](entry) + 4)
  value_ptr[0] = value

  # Store section
  var section_ptr: ptr int32 = cast[ptr int32](cast[int32](entry) + 8)
  section_ptr[0] = section

  # Store type
  var type_ptr: ptr int32 = cast[ptr int32](cast[int32](entry) + 12)
  type_ptr[0] = sym_type

  var idx: int32 = g_sym_count
  g_sym_count = g_sym_count + 1
  return idx

proc find_symbol(name: ptr uint8): int32 =
  var i: int32 = 0
  while i < g_sym_count:
    var entry: ptr uint8 = cast[ptr uint8](cast[int32](g_symbols) + i * 32)
    var name_ptr: ptr int32 = cast[ptr int32](entry)
    var sym_name: ptr uint8 = cast[ptr uint8](name_ptr[0])
    if strcmp(sym_name, name) == 0:
      return i
    i = i + 1
  return -1

proc get_symbol_value(idx: int32): int32 =
  var entry: ptr uint8 = cast[ptr uint8](cast[int32](g_symbols) + idx * 32)
  var value_ptr: ptr int32 = cast[ptr int32](cast[int32](entry) + 4)
  return value_ptr[0]

proc set_symbol_value(idx: int32, value: int32) =
  var entry: ptr uint8 = cast[ptr uint8](cast[int32](g_symbols) + idx * 32)
  var value_ptr: ptr int32 = cast[ptr int32](cast[int32](entry) + 4)
  value_ptr[0] = value

proc get_symbol_section(idx: int32): int32 =
  var entry: ptr uint8 = cast[ptr uint8](cast[int32](g_symbols) + idx * 32)
  var section_ptr: ptr int32 = cast[ptr int32](cast[int32](entry) + 8)
  return section_ptr[0]

proc set_symbol_section(idx: int32, section: int32) =
  var entry: ptr uint8 = cast[ptr uint8](cast[int32](g_symbols) + idx * 32)
  var section_ptr: ptr int32 = cast[ptr int32](cast[int32](entry) + 8)
  section_ptr[0] = section

proc get_symbol_pass2_defined(idx: int32): int32 =
  var entry: ptr uint8 = cast[ptr uint8](cast[int32](g_symbols) + idx * 32)
  var flag_ptr: ptr int32 = cast[ptr int32](cast[int32](entry) + 16)
  return flag_ptr[0]

proc set_symbol_pass2_defined(idx: int32, defined: int32) =
  var entry: ptr uint8 = cast[ptr uint8](cast[int32](g_symbols) + idx * 32)
  var flag_ptr: ptr int32 = cast[ptr int32](cast[int32](entry) + 16)
  flag_ptr[0] = defined

proc clear_all_pass2_flags() =
  var i: int32 = 0
  while i < g_sym_count:
    set_symbol_pass2_defined(i, 0)
    i = i + 1

# ============================================================================
# Code Emission
# ============================================================================

proc emit_byte(b: uint8) =
  if g_current_section == SYM_TEXT:
    if g_text_len >= g_text_cap:
      print_err(cast[ptr uint8]("Error: text section overflow\n"))
      g_error = 1
      return
    g_text[g_text_len] = b
    g_text_len = g_text_len + 1
  else:
    if g_current_section == SYM_DATA:
      if g_data_len >= g_data_cap:
        print_err(cast[ptr uint8]("Error: data section overflow\n"))
        g_error = 1
        return
      g_data[g_data_len] = b
      g_data_len = g_data_len + 1

proc emit_word(w: int32) =
  emit_byte(cast[uint8](w & 255))
  emit_byte(cast[uint8]((w >> 8) & 255))

proc emit_dword(d: int32) =
  emit_byte(cast[uint8](d & 255))
  emit_byte(cast[uint8]((d >> 8) & 255))
  emit_byte(cast[uint8]((d >> 16) & 255))
  emit_byte(cast[uint8]((d >> 24) & 255))

proc current_offset(): int32 =
  if g_current_section == SYM_TEXT:
    return g_text_len
  if g_current_section == SYM_DATA:
    return g_data_len
  return g_bss_len

# ============================================================================
# Relocation
# ============================================================================

proc add_reloc(offset: int32, sym_idx: int32, rel_type: int32, addend: int32) =
  if g_reloc_count >= g_reloc_cap:
    print_err(cast[ptr uint8]("Error: relocation table full\n"))
    g_error = 1
    return

  var entry: ptr uint8 = cast[ptr uint8](cast[int32](g_relocs) + g_reloc_count * 16)
  var p: ptr int32 = cast[ptr int32](entry)
  p[0] = offset
  p[1] = sym_idx
  p[2] = rel_type
  p[3] = addend
  g_reloc_count = g_reloc_count + 1

# ============================================================================
# Instruction Encoding
# ============================================================================

# ModR/M byte: mod (2 bits) | reg (3 bits) | r/m (3 bits)
proc modrm(mod_val: int32, reg: int32, rm: int32): uint8 =
  return cast[uint8]((mod_val << 6) | (reg << 3) | rm)

# Encode mov reg, reg
proc encode_mov_reg_reg(dst: int32, src: int32) =
  emit_byte(cast[uint8](0x89))  # MOV r/m32, r32
  emit_byte(modrm(3, src, dst))

# Encode mov reg, imm32
proc encode_mov_reg_imm(dst: int32, imm: int32) =
  emit_byte(cast[uint8](0xB8 + dst))  # MOV r32, imm32
  emit_dword(imm)

# Encode mov reg, [reg]
proc encode_mov_reg_mem(dst: int32, base: int32) =
  emit_byte(cast[uint8](0x8B))  # MOV r32, r/m32
  if base == REG_EBP:
    emit_byte(modrm(1, dst, base))  # [ebp+disp8]
    emit_byte(cast[uint8](0))
  else:
    if base == REG_ESP:
      emit_byte(modrm(0, dst, 4))  # SIB needed for ESP
      emit_byte(cast[uint8](0x24))  # SIB: base=ESP, index=none
    else:
      emit_byte(modrm(0, dst, base))

# Encode mov reg, [reg+disp]
proc encode_mov_reg_mem_disp(dst: int32, base: int32, disp: int32) =
  emit_byte(cast[uint8](0x8B))  # MOV r32, r/m32
  if disp >= -128 and disp <= 127:
    if base == REG_ESP:
      emit_byte(modrm(1, dst, 4))  # SIB needed for ESP
      emit_byte(cast[uint8](0x24))
    else:
      emit_byte(modrm(1, dst, base))  # [base+disp8]
    emit_byte(cast[uint8](disp & 255))
  else:
    if base == REG_ESP:
      emit_byte(modrm(2, dst, 4))  # SIB needed for ESP
      emit_byte(cast[uint8](0x24))
    else:
      emit_byte(modrm(2, dst, base))  # [base+disp32]
    emit_dword(disp)

# Encode mov [reg], reg
proc encode_mov_mem_reg(base: int32, src: int32) =
  emit_byte(cast[uint8](0x89))  # MOV r/m32, r32
  if base == REG_EBP:
    emit_byte(modrm(1, src, base))
    emit_byte(cast[uint8](0))
  else:
    if base == REG_ESP:
      emit_byte(modrm(0, src, 4))
      emit_byte(cast[uint8](0x24))
    else:
      emit_byte(modrm(0, src, base))

# Encode mov byte [reg], reg8
proc encode_mov_mem_reg8(base: int32, src: int32) =
  emit_byte(cast[uint8](0x88))  # MOV r/m8, r8
  if base == REG_EBP:
    emit_byte(modrm(1, src, base))
    emit_byte(cast[uint8](0))
  else:
    if base == REG_ESP:
      emit_byte(modrm(0, src, 4))
      emit_byte(cast[uint8](0x24))
    else:
      emit_byte(modrm(0, src, base))

# Encode mov byte [reg+disp], reg8
proc encode_mov_mem_disp_reg8(base: int32, disp: int32, src: int32) =
  emit_byte(cast[uint8](0x88))  # MOV r/m8, r8
  if disp >= -128 and disp <= 127:
    if base == REG_ESP:
      emit_byte(modrm(1, src, 4))
      emit_byte(cast[uint8](0x24))
    else:
      emit_byte(modrm(1, src, base))
    emit_byte(cast[uint8](disp & 255))
  else:
    if base == REG_ESP:
      emit_byte(modrm(2, src, 4))
      emit_byte(cast[uint8](0x24))
    else:
      emit_byte(modrm(2, src, base))
    emit_dword(disp)

# Encode mov [reg+disp], reg
proc encode_mov_mem_disp_reg(base: int32, disp: int32, src: int32) =
  emit_byte(cast[uint8](0x89))  # MOV r/m32, r32
  if disp >= -128 and disp <= 127:
    if base == REG_ESP:
      emit_byte(modrm(1, src, 4))
      emit_byte(cast[uint8](0x24))
    else:
      emit_byte(modrm(1, src, base))
    emit_byte(cast[uint8](disp & 255))
  else:
    if base == REG_ESP:
      emit_byte(modrm(2, src, 4))
      emit_byte(cast[uint8](0x24))
    else:
      emit_byte(modrm(2, src, base))
    emit_dword(disp)

# Encode mov word [reg+disp], reg16 (16-bit)
proc encode_mov_mem_disp_reg16(base: int32, disp: int32, src: int32) =
  emit_byte(cast[uint8](0x66))  # Operand size override prefix
  emit_byte(cast[uint8](0x89))  # MOV r/m16, r16
  if disp >= -128 and disp <= 127:
    if base == REG_ESP:
      emit_byte(modrm(1, src, 4))
      emit_byte(cast[uint8](0x24))
    else:
      emit_byte(modrm(1, src, base))
    emit_byte(cast[uint8](disp & 255))
  else:
    if base == REG_ESP:
      emit_byte(modrm(2, src, 4))
      emit_byte(cast[uint8](0x24))
    else:
      emit_byte(modrm(2, src, base))
    emit_dword(disp)

# Encode push reg
proc encode_push_reg(reg: int32) =
  emit_byte(cast[uint8](0x50 + reg))

# Encode push imm32
proc encode_push_imm(imm: int32) =
  emit_byte(cast[uint8](0x68))
  emit_dword(imm)

# Encode pop reg
proc encode_pop_reg(reg: int32) =
  emit_byte(cast[uint8](0x58 + reg))

# Encode call rel32 (with relocation)
proc encode_call_rel(sym_idx: int32) =
  emit_byte(cast[uint8](0xE8))
  add_reloc(g_text_len, sym_idx, R_386_PC32, -4)
  emit_dword(-4)  # Addend goes in instruction for REL-style relocations

# Encode ret
proc encode_ret() =
  emit_byte(cast[uint8](0xC3))

# Encode add reg, reg
proc encode_add_reg_reg(dst: int32, src: int32) =
  emit_byte(cast[uint8](0x01))
  emit_byte(modrm(3, src, dst))

# Encode add reg, imm
proc encode_add_reg_imm(dst: int32, imm: int32) =
  if imm >= -128 and imm <= 127:
    emit_byte(cast[uint8](0x83))
    emit_byte(modrm(3, 0, dst))
    emit_byte(cast[uint8](imm & 255))
  else:
    if dst == REG_EAX:
      emit_byte(cast[uint8](0x05))
      emit_dword(imm)
    else:
      emit_byte(cast[uint8](0x81))
      emit_byte(modrm(3, 0, dst))
      emit_dword(imm)

# Encode sub reg, reg
proc encode_sub_reg_reg(dst: int32, src: int32) =
  emit_byte(cast[uint8](0x29))
  emit_byte(modrm(3, src, dst))

# Encode sub reg, imm
proc encode_sub_reg_imm(dst: int32, imm: int32) =
  if imm >= -128 and imm <= 127:
    emit_byte(cast[uint8](0x83))
    emit_byte(modrm(3, 5, dst))
    emit_byte(cast[uint8](imm & 255))
  else:
    if dst == REG_EAX:
      emit_byte(cast[uint8](0x2D))
      emit_dword(imm)
    else:
      emit_byte(cast[uint8](0x81))
      emit_byte(modrm(3, 5, dst))
      emit_dword(imm)

# Encode int n
proc encode_int(n: int32) =
  emit_byte(cast[uint8](0xCD))
  emit_byte(cast[uint8](n))

# Encode lea reg, [base+disp]
proc encode_lea_reg_mem_disp(dst: int32, base: int32, disp: int32) =
  emit_byte(cast[uint8](0x8D))
  if disp >= -128 and disp <= 127:
    if base == REG_ESP:
      emit_byte(modrm(1, dst, 4))
      emit_byte(cast[uint8](0x24))
    else:
      emit_byte(modrm(1, dst, base))
    emit_byte(cast[uint8](disp & 255))
  else:
    if base == REG_ESP:
      emit_byte(modrm(2, dst, 4))
      emit_byte(cast[uint8](0x24))
    else:
      emit_byte(modrm(2, dst, base))
    emit_dword(disp)

# Compute SIB byte: scale*64 + index*8 + base
proc make_sib(scale: int32, idx: int32, base: int32): int32 =
  var ss: int32 = 0
  if scale == 1:
    ss = 0
  else:
    if scale == 2:
      ss = 1
    else:
      if scale == 4:
        ss = 2
      else:
        if scale == 8:
          ss = 3
  return (ss * 64) + (idx * 8) + base

# Encode lea reg, [base + index*scale]
proc encode_lea_reg_sib(dst: int32, base: int32, idx: int32, scale: int32) =
  emit_byte(cast[uint8](0x8D))
  if base == REG_EBP:
    # [ebp + index*scale] needs disp8=0
    emit_byte(modrm(1, dst, 4))  # mod=01, r/m=4 (SIB follows)
    emit_byte(cast[uint8](make_sib(scale, idx, base)))
    emit_byte(cast[uint8](0))   # disp8 = 0
  else:
    emit_byte(modrm(0, dst, 4))  # mod=00, r/m=4 (SIB follows)
    emit_byte(cast[uint8](make_sib(scale, idx, base)))

# Encode lea reg, [base + index*scale + disp]
proc encode_lea_reg_sib_disp(dst: int32, base: int32, idx: int32, scale: int32, disp: int32) =
  emit_byte(cast[uint8](0x8D))
  if disp >= -128 and disp <= 127:
    emit_byte(modrm(1, dst, 4))  # mod=01, r/m=4 (SIB follows)
    emit_byte(cast[uint8](make_sib(scale, idx, base)))
    emit_byte(cast[uint8](disp & 255))
  else:
    emit_byte(modrm(2, dst, 4))  # mod=10, r/m=4 (SIB follows)
    emit_byte(cast[uint8](make_sib(scale, idx, base)))
    emit_dword(disp)

# Encode mov reg, [base + index*scale]
proc encode_mov_reg_sib(dst: int32, base: int32, idx: int32, scale: int32) =
  emit_byte(cast[uint8](0x8B))
  if base == REG_EBP:
    emit_byte(modrm(1, dst, 4))
    emit_byte(cast[uint8](make_sib(scale, idx, base)))
    emit_byte(cast[uint8](0))
  else:
    emit_byte(modrm(0, dst, 4))
    emit_byte(cast[uint8](make_sib(scale, idx, base)))

