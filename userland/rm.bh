# rm - remove files
# Usage: rm filename

import "lib/syscalls"

extern get_argc(): int32
extern get_argv(index: int32): ptr uint8

proc main(): int32 =
  var argc: int32 = get_argc()

  if argc < 2:
    perror("Usage: rm filename")
    return 1

  var filename: ptr uint8 = get_argv(1)
  var result: int32 = unlink(filename)

  if result < 0:
    perror("rm: cannot remove file")
    return 1

  return 0
