# rm - remove files
# Usage: rm filename

from lib.syscalls import *

extern def get_argc() -> int32
extern def get_argv(index: int32) -> *uint8

def main() -> int32:
  argc: int32 = get_argc()

  if argc < 2:
    perror("Usage: rm filename")
    return 1

  filename: *uint8 = get_argv(1)
  result: int32 = unlink(filename)

  if result < 0:
    perror("rm: cannot remove file")
    return 1

  return 0
