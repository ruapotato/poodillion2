# Test getdents64 syscall

from lib.syscalls import *

extern def get_argc() -> int32
extern def get_argv(i: int32) -> *uint8

def print_num(n: int32):
  buf: *uint8 = cast[*uint8](0)
  old_brk: int32 = syscall1(SYS_brk, 0)
  new_brk: int32 = old_brk + 32
  syscall1(SYS_brk, new_brk)
  buf = cast[*uint8](old_brk)

  num: int32 = n
  if num < 0:
    syscall3(SYS_write, STDOUT, cast[int32]("-"), 1)
    num = 0 - num

  i: int32 = 0
  if num == 0:
    buf[0] = cast[uint8](48)
    i = 1
  else:
    while num > 0:
      digit: int32 = num % 10
      buf[i] = cast[uint8](48 + digit)
      num = num / 10
      i = i + 1

  # Reverse
  j: int32 = 0
  k: int32 = i - 1
  while j < k:
    temp: uint8 = buf[j]
    buf[j] = buf[k]
    buf[k] = temp
    j = j + 1
    k = k - 1

  syscall3(SYS_write, STDOUT, cast[int32](buf), i)

def main():
  # Allocate memory
  old_brk: int32 = syscall1(SYS_brk, 0)
  new_brk: int32 = old_brk + 8192
  syscall1(SYS_brk, new_brk)
  buffer: *uint8 = cast[*uint8](old_brk)

  # Get directory path
  argc: int32 = get_argc()
  path: *uint8 = cast[*uint8](".")
  if argc > 1:
    path = get_argv(1)

  print(cast[*uint8]("Opening: "))
  print(path)
  print(cast[*uint8]("\n"))

  # Open directory
  fd: int32 = syscall3(SYS_open, cast[int32](path), O_RDONLY | O_DIRECTORY, 0)
  print(cast[*uint8]("open() returned: "))
  print_num(fd)
  print(cast[*uint8]("\n"))

  if fd < 0:
    print(cast[*uint8]("Failed to open directory\n"))
    syscall1(SYS_exit, 1)

  # Read directory entries
  nread: int32 = syscall3(SYS_getdents64, fd, cast[int32](buffer), 8192)
  print(cast[*uint8]("getdents64() returned: "))
  print_num(nread)
  print(cast[*uint8]("\n"))

  if nread > 0:
    pos: int32 = 0
    while pos < nread:
      reclen_ptr: *uint16 = cast[*uint16](cast[int32](buffer) + pos + 16)
      reclen: int32 = cast[int32](reclen_ptr[0])
      d_name: *uint8 = cast[*uint8](cast[int32](buffer) + pos + 19)
      d_type: *uint8 = cast[*uint8](cast[int32](buffer) + pos + 18)

      print(cast[*uint8]("  "))
      print(d_name)
      print(cast[*uint8](" (type="))
      print_num(cast[int32](d_type[0]))
      print(cast[*uint8](")\n"))

      pos = pos + reclen

  syscall1(SYS_close, fd)
  syscall1(SYS_exit, 0)
