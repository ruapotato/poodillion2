# test_minimal - Direct write to framebuffer (no mmap)

from lib.syscalls import *

const FBIOGET_VSCREENINFO: int32 = 0x4600
def main():
  print(cast[*uint8]("Opening /dev/fb0...\n"), 20)

  fd: int32 = syscall2(SYS_open, cast[int32]("/dev/fb0"), O_RDWR)
  if fd < 0:
    print(cast[*uint8]("Error: Cannot open\n"), 19)
    syscall1(SYS_exit, 1)

  print(cast[*uint8]("Getting screen info...\n"), 23)

  # Get screen info using brk for memory
  old_brk: int32 = syscall1(SYS_brk, 0)
  new_brk: int32 = old_brk + 160
  syscall1(SYS_brk, new_brk)
  vinfo: *uint32 = cast[*uint32](old_brk)

  result: int32 = syscall3(SYS_ioctl, fd, FBIOGET_VSCREENINFO, cast[int32](vinfo))
  if result < 0:
    print(cast[*uint8]("Error: Cannot get info\n"), 23)
    syscall1(SYS_close, fd)
    syscall1(SYS_exit, 1)

  # Extract screen parameters
  xres: int32 = cast[int32](vinfo[0])
  yres: int32 = cast[int32](vinfo[1])
  bpp: int32 = cast[int32](vinfo[6])

  print(cast[*uint8]("Writing red pixel...\n"), 21)

  # Seek to start of framebuffer
  syscall3(SYS_lseek, fd, 0, SEEK_SET)

  # Allocate buffer for one pixel (4 bytes for 32bpp)
  pixel_brk: int32 = syscall1(SYS_brk, 0)
  syscall1(SYS_brk, pixel_brk + 4)
  pixel: *uint32 = cast[*uint32](pixel_brk)

  # Red pixel (BGRA format: 0x00FF0000 = red)
  pixel[0] = 0x00FF0000

  # Write pixel to framebuffer
  bytes_written: int32 = syscall3(SYS_write, fd, cast[int32](pixel), 4)

  if bytes_written < 4:
    print(cast[*uint8]("Error: Write failed\n"), 20)
    syscall1(SYS_close, fd)
    syscall1(SYS_exit, 1)

  print(cast[*uint8]("SUCCESS! Pixel written\n"), 23)

  syscall1(SYS_close, fd)
  syscall1(SYS_exit, 0)

main()
