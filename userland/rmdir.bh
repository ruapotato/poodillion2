# rmdir - remove empty directory
# Usage: rmdir dirname

import "lib/syscalls"

extern get_argc(): int32
extern get_argv(index: int32): ptr uint8

proc main(): int32 =
  var argc: int32 = get_argc()

  if argc < 2:
    perror("Usage: rmdir dirname")
    return 1

  var dirname: ptr uint8 = get_argv(1)
  var result: int32 = rmdir_syscall(dirname)

  if result < 0:
    perror("rmdir: cannot remove directory")
    return 1

  return 0
