# rmdir - remove empty directory
# Usage: rmdir dirname

from lib.syscalls import *

extern def get_argc() -> int32
extern def get_argv(index: int32) -> *uint8

def main() -> int32:
  argc: int32 = get_argc()

  if argc < 2:
    perror("Usage: rmdir dirname")
    return 1

  dirname: *uint8 = get_argv(1)
  result: int32 = rmdir_syscall(dirname)

  if result < 0:
    perror("rmdir: cannot remove directory")
    return 1

  return 0
