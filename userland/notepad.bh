def draw_char(x: int32, y: int32, c: uint8, color: int32):
  idx: int32 = cast[int32](c) * 8
  if idx < 0 or idx >= 760:
    return
  row: int32 = 0
  while row < 8:
    bits: uint8 = font[idx + row]
    col: int32 = 0
    while col < 8:
      mask: int32 = 128
      shift: int32 = col
      while shift > 0:
        mask = mask / 2
        shift = shift - 1
      if (cast[int32](bits) & mask) != 0:
        buf_pixel(x + col, y + row, color)
      col = col + 1
    row = row + 1

def draw_text(x: int32, y: int32, text: *uint8, color: int32):
  i: int32 = 0
  cx: int32 = x
  while text[i] != cast[uint8](0):
    draw_char(cx, y, text[i], color)
    cx = cx + FONT_WIDTH
    i = i + 1

def draw_number(x: int32, y: int32, n: int32, color: int32):
  buf: array[12, uint8]
  if n == 0:
    buf[0] = cast[uint8](48)
    buf[1] = cast[uint8](0)
    draw_text(x, y, cast[*uint8](buf), color)
    return
  tmp: int32 = n
  i: int32 = 0
  while tmp > 0:
    buf[i] = cast[uint8](48 + tmp - (tmp / 10) * 10)
    tmp = tmp / 10
    i = i + 1
  buf[i] = cast[uint8](0)
  j: int32 = 0
  k: int32 = i - 1
  while j < k:
    t: uint8 = buf[j]
    buf[j] = buf[k]
    buf[k] = t
    j = j + 1
    k = k - 1
  draw_text(x, y, cast[*uint8](buf), color)

# ============ Framebuffer Setup ============

def init_framebuffer() -> int32:
  old_brk: int32 = syscall1(SYS_brk, 0)
  _ = syscall1(SYS_brk, old_brk + 512)
  path: *uint8 = cast[*uint8](old_brk)
  path[0] = cast[uint8](47)
  path[1] = cast[uint8](100)
  path[2] = cast[uint8](101)
  path[3] = cast[uint8](118)
  path[4] = cast[uint8](47)
  path[5] = cast[uint8](102)
  path[6] = cast[uint8](98)
  path[7] = cast[uint8](48)
  path[8] = cast[uint8](0)

  g_fb_fd = syscall3(SYS_open, cast[int32](path), O_RDWR, 0)
  if g_fb_fd < 0:
    print_str(cast[*uint8]("Error: cannot open /dev/fb0\n"))
    return 1

  vinfo: *int32 = cast[*int32](old_brk + 32)
  i: int32 = 0
  while i < 40:
    vinfo[i] = 0
    i = i + 1

  const FBIOGET_VSCREENINFO: int32 = 0x4600
  ret: int32 = syscall3(SYS_ioctl, g_fb_fd, FBIOGET_VSCREENINFO, cast[int32](vinfo))
  if ret < 0:
    return 1

  g_xres = vinfo[0]
  g_yres = vinfo[1]
  bpp: int32 = vinfo[6]

  if bpp != 32:
    print_str(cast[*uint8]("Error: only 32bpp supported\n"))
    return 1

  fb_size: int32 = g_xres * g_yres * 4
  g_fb = cast[*uint32](syscall6(SYS_mmap2, 0, fb_size, PROT_READ + PROT_WRITE, MAP_SHARED, g_fb_fd, 0))

  if cast[int32](g_fb) < 0:
    return 1

  # Calculate visible area
  g_visible_lines = (g_yres - 30) / FONT_HEIGHT  # Leave room for status bar
  g_visible_cols = (g_xres - g_text_start_x) / FONT_WIDTH

  # Set stdin non-blocking
  flags: int32 = syscall2(SYS_fcntl, STDIN, F_GETFL)
  _ = syscall3(SYS_fcntl, STDIN, F_SETFL, flags + O_NONBLOCK)

  return 0

# ============ Text Buffer Operations ============

def get_line_start(line_num: int32) -> int32:
  # Returns position of the start of line_num (0-indexed)
  if line_num <= 0:
    return 0
  pos: int32 = 0
  line: int32 = 0
  while pos < g_text_len and line < line_num:
    if g_text[pos] == cast[uint8](10):  # newline
      line = line + 1
    pos = pos + 1
  return pos

def get_cursor_line() -> int32:
  # Returns which line the cursor is on
  line: int32 = 0
  i: int32 = 0
  while i < g_cursor_pos and i < g_text_len:
    if g_text[i] == cast[uint8](10):
      line = line + 1
    i = i + 1
  return line

def get_cursor_col() -> int32:
  # Returns column position on current line
  col: int32 = 0
  i: int32 = g_cursor_pos - 1
  while i >= 0:
    if g_text[i] == cast[uint8](10):
      return col
    col = col + 1
    i = i - 1
  return col

def get_total_lines() -> int32:
  lines: int32 = 1
  i: int32 = 0
  while i < g_text_len:
    if g_text[i] == cast[uint8](10):
      lines = lines + 1
    i = i + 1
  return lines

def insert_char(c: uint8):
  if g_text_len >= MAX_TEXT - 1:
    return
  # Shift text after cursor
  i: int32 = g_text_len
  while i > g_cursor_pos:
    g_text[i] = g_text[i - 1]
    i = i - 1
  g_text[g_cursor_pos] = c
  g_text_len = g_text_len + 1
  g_cursor_pos = g_cursor_pos + 1
  g_modified = 1

def delete_char():
  if g_cursor_pos > 0:
    i: int32 = g_cursor_pos - 1
    while i < g_text_len - 1:
      g_text[i] = g_text[i + 1]
      i = i + 1
    g_text_len = g_text_len - 1
    g_cursor_pos = g_cursor_pos - 1
    g_modified = 1

def move_cursor_up():
  cur_line: int32 = get_cursor_line()
  cur_col: int32 = get_cursor_col()
  if cur_line > 0:
    new_line_start: int32 = get_line_start(cur_line - 1)
    new_line_end: int32 = get_line_start(cur_line) - 1
    new_line_len: int32 = new_line_end - new_line_start
    if cur_col > new_line_len:
      g_cursor_pos = new_line_end
    else:
      g_cursor_pos = new_line_start + cur_col

def move_cursor_down():
  cur_line: int32 = get_cursor_line()
  cur_col: int32 = get_cursor_col()
  total_lines: int32 = get_total_lines()
  if cur_line < total_lines - 1:
    new_line_start: int32 = get_line_start(cur_line + 1)
    next_line_start: int32 = get_line_start(cur_line + 2)
    new_line_len: int32 = next_line_start - new_line_start - 1
    if next_line_start > g_text_len:
      new_line_len = g_text_len - new_line_start
    if cur_col > new_line_len:
      g_cursor_pos = new_line_start + new_line_len
    else:
      g_cursor_pos = new_line_start + cur_col

# ============ File Operations ============

def load_file(filename: *uint8) -> int32:
  fd: int32 = syscall3(SYS_open, cast[int32](filename), O_RDONLY, 0)
  if fd < 0:
    return 1

  # Get file size
  size: int32 = syscall3(SYS_lseek, fd, 0, SEEK_END)
  _ = syscall3(SYS_lseek, fd, 0, SEEK_SET)

  if size > MAX_TEXT - 1:
    size = MAX_TEXT - 1

  if size > 0:
    g_text_len = syscall3(SYS_read, fd, cast[int32](g_text), size)
  else:
    g_text_len = 0

  _ = syscall1(SYS_close, fd)
  g_cursor_pos = 0
  g_scroll_y = 0
  g_modified = 0
  strcpy(cast[*uint8](g_filename), filename)
  return 0

def save_file() -> int32:
  if g_filename[0] == cast[uint8](0):
    return 1

  fd: int32 = syscall3(SYS_open, cast[int32](g_filename), O_WRONLY + O_CREAT + O_TRUNC, 420)  # 0644
  if fd < 0:
    return 1

  if g_text_len > 0:
    _ = syscall3(SYS_write, fd, cast[int32](g_text), g_text_len)

  _ = syscall1(SYS_close, fd)
  g_modified = 0
  return 0

# ============ Input Handling ============

def handle_input():
  buf: array[16, uint8]
  n: int32 = syscall3(SYS_read, STDIN, cast[int32](buf), 16)

  if n <= 0:
    return

  c: uint8 = buf[0]

  # Escape sequences (arrow keys)
  if n >= 3 and c == cast[uint8](27) and buf[1] == cast[uint8](91):
    if buf[2] == cast[uint8](65):       # Up
      move_cursor_up()
    else:
      if buf[2] == cast[uint8](66):     # Down
        move_cursor_down()
      else:
        if buf[2] == cast[uint8](67):   # Right
          if g_cursor_pos < g_text_len:
            g_cursor_pos = g_cursor_pos + 1
        else:
          if buf[2] == cast[uint8](68): # Left
            if g_cursor_pos > 0:
              g_cursor_pos = g_cursor_pos - 1
    return

  # Ctrl+Q = quit
  if c == cast[uint8](17):
    g_running = 0
    return

  # Ctrl+S = save
  if c == cast[uint8](19):
    _ = save_file()
    return

  # Backspace
  if c == cast[uint8](127) or c == cast[uint8](8):
    delete_char()
    return

  # Enter
  if c == cast[uint8](13) or c == cast[uint8](10):
    insert_char(cast[uint8](10))
    return

  # Tab
  if c == cast[uint8](9):
    spaces: int32 = 0
    while spaces < TAB_SIZE:
      insert_char(cast[uint8](32))
      spaces = spaces + 1
    return

  # Regular printable characters
  if c >= cast[uint8](32) and c < cast[uint8](127):
    insert_char(c)

# ============ Rendering ============

def draw_editor():
  # Clear background
  i: int32 = 0
  total: int32 = g_xres * g_yres
  while i < total:
    g_fb[i] = cast[uint32](BG_COLOR)
    i = i + 1

  # Draw line number gutter
  fill_rect(0, 0, g_text_start_x - 5, g_yres - 24, LINE_NUM_BG)

  # Draw text content
  line: int32 = g_scroll_y
  y: int32 = 2
  pos: int32 = get_line_start(g_scroll_y)

  while line < g_scroll_y + g_visible_lines and pos <= g_text_len:
    # Draw line number
    draw_number(5, y, line + 1, LINE_NUM_FG)

    # Draw line content
    x: int32 = g_text_start_x
    while pos < g_text_len and g_text[pos] != cast[uint8](10):
      ch: uint8 = g_text[pos]

      # Draw cursor
      if pos == g_cursor_pos:
        fill_rect(x, y, 2, FONT_HEIGHT, CURSOR_COLOR)

      # Draw character
      if ch >= cast[uint8](32) and ch < cast[uint8](127):
        draw_char(x, y, ch, TEXT_COLOR)
      x = x + FONT_WIDTH
      pos = pos + 1

    # Draw cursor at end of line or on newline
    if pos == g_cursor_pos:
      fill_rect(x, y, 2, FONT_HEIGHT, CURSOR_COLOR)

    if pos < g_text_len and g_text[pos] == cast[uint8](10):
      pos = pos + 1

    line = line + 1
    y = y + FONT_HEIGHT

  # Draw cursor at end of file
  if g_cursor_pos == g_text_len:
    cursor_line: int32 = get_cursor_line()
    cursor_col: int32 = get_cursor_col()
    if cursor_line >= g_scroll_y and cursor_line < g_scroll_y + g_visible_lines:
      cx: int32 = g_text_start_x + cursor_col * FONT_WIDTH
      cy: int32 = 2 + (cursor_line - g_scroll_y) * FONT_HEIGHT
      fill_rect(cx, cy, 2, FONT_HEIGHT, CURSOR_COLOR)

  # Draw status bar
  status_y: int32 = g_yres - 22
  fill_rect(0, status_y, g_xres, 22, STATUS_BG)

  # Filename
  if g_filename[0] != cast[uint8](0):
    draw_text(10, status_y + 4, cast[*uint8](g_filename), STATUS_FG)
    if g_modified != 0:
      draw_text(10 + strlen(cast[*uint8](g_filename)) * FONT_WIDTH, status_y + 4, cast[*uint8](" [+]"), STATUS_FG)
  else:
    draw_text(10, status_y + 4, cast[*uint8]("[New File]"), STATUS_FG)

  # Line/column indicator
  cur_line: int32 = get_cursor_line()
  cur_col: int32 = get_cursor_col()
  info_x: int32 = g_xres - 150
  draw_text(info_x, status_y + 4, cast[*uint8]("Ln "), STATUS_FG)
  draw_number(info_x + 24, status_y + 4, cur_line + 1, STATUS_FG)
  draw_text(info_x + 60, status_y + 4, cast[*uint8]("Col "), STATUS_FG)
  draw_number(info_x + 92, status_y + 4, cur_col + 1, STATUS_FG)

# ============ Main ============

def main() -> int32:
  print_str(cast[*uint8]("Notepad - Ctrl+S to save, Ctrl+Q to quit\n"))

  if init_framebuffer() != 0:
    return 1

  init_font()

  # Allocate text buffer
  old_brk: int32 = syscall1(SYS_brk, 0)
  _ = syscall1(SYS_brk, old_brk + MAX_TEXT)
  g_text = cast[*uint8](old_brk)
  g_text_len = 0
  g_cursor_pos = 0

  # Initialize empty filename
  g_filename[0] = cast[uint8](0)

  # Main loop
  while g_running != 0:
    handle_input()

    # Ensure cursor is visible (auto-scroll)
    cursor_line: int32 = get_cursor_line()
    if cursor_line < g_scroll_y:
      g_scroll_y = cursor_line
    if cursor_line >= g_scroll_y + g_visible_lines:
      g_scroll_y = cursor_line - g_visible_lines + 1

    draw_editor()

    # Small delay to reduce CPU usage
    old_brk2: int32 = syscall1(SYS_brk, 0)
    _ = syscall1(SYS_brk, old_brk2 + 16)
    ts: *int32 = cast[*int32](old_brk2)
    ts[0] = 0
    ts[1] = 16000000  # 16ms
    const SYS_nanosleep: int32 = 162
    _ = syscall2(SYS_nanosleep, cast[int32](ts), 0)

  # Clear screen
  i: int32 = 0
  total: int32 = g_xres * g_yres
  while i < total:
    g_fb[i] = cast[uint32](0)
    i = i + 1

  _ = syscall1(SYS_close, g_fb_fd)
  return 0

main()
