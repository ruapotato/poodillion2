# notepad - Simple Graphical Text Editor
# A basic text editor with file loading and saving

from lib.syscalls import *

const O_NONBLOCK: int32 = 2048
const F_SETFL: int32 = 4
const F_GETFL: int32 = 3
const PROT_READ: int32 = 1
const PROT_WRITE: int32 = 2
const MAP_SHARED: int32 = 1

# Editor constants
const MAX_LINES: int32 = 1000
const MAX_LINE_LEN: int32 = 256
const MAX_TEXT: int32 = 262144  # 256KB max file size
const FONT_WIDTH: int32 = 8
const FONT_HEIGHT: int32 = 10
const TAB_SIZE: int32 = 4

# Colors
const BG_COLOR: int32 = 0x1E1E2E
const TEXT_COLOR: int32 = 0xCDD6F4
const CURSOR_COLOR: int32 = 0xF5C2E7
const LINE_NUM_BG: int32 = 0x181825
const LINE_NUM_FG: int32 = 0x6C7086
const STATUS_BG: int32 = 0x313244
const STATUS_FG: int32 = 0xBAC2DE
const SELECTION_BG: int32 = 0x45475A

# Global framebuffer state
g_fb: *uint32 = cast[*uint32](0)
g_xres: int32 = 0
g_yres: int32 = 0
g_fb_fd: int32 = 0

# Editor state
g_text: *uint8 = cast[*uint8](0)  # Text buffer
g_text_len: int32 = 0                    # Current text length
g_cursor_pos: int32 = 0                  # Cursor position in text
g_scroll_y: int32 = 0                    # Vertical scroll offset (lines)
g_filename: array[256, uint8]            # Current filename
g_modified: int32 = 0                    # Has file been modified?
g_running: int32 = 1

# Computed values
g_visible_lines: int32 = 0
g_visible_cols: int32 = 0
g_text_start_x: int32 = 50               # After line numbers

def print_str(s: *uint8):
  len: int32 = 0
  while s[len] != cast[uint8](0):
    len = len + 1
  _ = syscall3(SYS_write, STDOUT, cast[int32](s), len)

def print_num(n: int32):
  buf: array[16, uint8]
  if n == 0:
    buf[0] = cast[uint8](48)
    buf[1] = cast[uint8](0)
    print_str(cast[*uint8](buf))
    return
  tmp: int32 = n
  if tmp < 0:
    tmp = 0 - tmp
  i: int32 = 0
  while tmp > 0:
    buf[i] = cast[uint8](48 + tmp - (tmp / 10) * 10)
    tmp = tmp / 10
    i = i + 1
  buf[i] = cast[uint8](0)
  j: int32 = 0
  k: int32 = i - 1
  while j < k:
    t: uint8 = buf[j]
    buf[j] = buf[k]
    buf[k] = t
    j = j + 1
    k = k - 1
  print_str(cast[*uint8](buf))

# ============ Drawing Primitives ============

def buf_pixel(x: int32, y: int32, color: int32):
  if x >= 0 and x < g_xres and y >= 0 and y < g_yres:
    g_fb[y * g_xres + x] = cast[uint32](color)

def fill_rect(x: int32, y: int32, w: int32, h: int32, color: int32):
  cy: int32 = y
  while cy < y + h:
    if cy >= 0 and cy < g_yres:
      cx: int32 = x
      while cx < x + w:
        if cx >= 0 and cx < g_xres:
          g_fb[cy * g_xres + cx] = cast[uint32](color)
        cx = cx + 1
    cy = cy + 1

