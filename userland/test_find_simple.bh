# Simple find test

from lib.syscalls import *

extern def get_argc() -> int32
extern def get_argv(i: int32) -> *uint8

def print_num(n: int32):
  buf: *uint8 = cast[*uint8](0)
  old_brk: int32 = syscall1(SYS_brk, 0)
  new_brk: int32 = old_brk + 32
  syscall1(SYS_brk, new_brk)
  buf = cast[*uint8](old_brk)

  num: int32 = n
  if num < 0:
    syscall3(SYS_write, STDOUT, cast[int32]("-"), 1)
    num = 0 - num

  i: int32 = 0
  if num == 0:
    buf[0] = cast[uint8](48)
    i = 1
  else:
    while num > 0:
      digit: int32 = num % 10
      buf[i] = cast[uint8](48 + digit)
      num = num / 10
      i = i + 1

  # Reverse
  j: int32 = 0
  k: int32 = i - 1
  while j < k:
    temp: uint8 = buf[j]
    buf[j] = buf[k]
    buf[k] = temp
    j = j + 1
    k = k - 1

  syscall3(SYS_write, STDOUT, cast[int32](buf), i)

global_stat_buf: *uint8 = cast[*uint8](0)
global_dent_buf: *uint8 = cast[*uint8](0)

def list_dir(path: *uint8):
  print(cast[*uint8]("Listing: "))
  print(path)
  print(cast[*uint8]("\n"))

  # Check if it's a directory
  ret: int32 = syscall2(SYS_lstat64, cast[int32](path), cast[int32](global_stat_buf))
  print(cast[*uint8]("  lstat returned: "))
  print_num(ret)
  print(cast[*uint8]("\n"))

  if ret < 0:
    return

  mode_ptr: *uint32 = cast[*uint32](cast[int32](global_stat_buf) + 16)
  mode: int32 = cast[int32](mode_ptr[0])

  print(cast[*uint8]("  mode: "))
  print_num(mode)
  print(cast[*uint8]("\n"))
  print(cast[*uint8]("  mode & S_IFMT: "))
  print_num(mode & S_IFMT)
  print(cast[*uint8]("\n"))
  print(cast[*uint8]("  S_IFDIR: "))
  print_num(S_IFDIR)
  print(cast[*uint8]("\n"))

  if (mode & S_IFMT) != S_IFDIR:
    print(cast[*uint8]("  Not a directory\n"))
    return

  # Open directory
  fd: int32 = syscall3(SYS_open, cast[int32](path), O_RDONLY | O_DIRECTORY, 0)
  print(cast[*uint8]("  open returned: "))
  print_num(fd)
  print(cast[*uint8]("\n"))

  if fd < 0:
    return

  # Read entries
  nread: int32 = syscall3(SYS_getdents64, fd, cast[int32](global_dent_buf), 8192)
  print(cast[*uint8]("  getdents64 returned: "))
  print_num(nread)
  print(cast[*uint8]("\n"))

  if nread > 0:
    pos: int32 = 0
    while pos < nread:
      reclen_ptr: *uint16 = cast[*uint16](cast[int32](global_dent_buf) + pos + 16)
      reclen: int32 = cast[int32](reclen_ptr[0])
      d_name: *uint8 = cast[*uint8](cast[int32](global_dent_buf) + pos + 19)
      d_type: *uint8 = cast[*uint8](cast[int32](global_dent_buf) + pos + 18)

      print(cast[*uint8]("    "))
      print(d_name)
      print(cast[*uint8](" (type="))
      print_num(cast[int32](d_type[0]))
      print(cast[*uint8](")\n"))

      pos = pos + reclen

  syscall1(SYS_close, fd)

def main():
  # Allocate memory
  old_brk: int32 = syscall1(SYS_brk, 0)
  new_brk: int32 = old_brk + 20480
  syscall1(SYS_brk, new_brk)

  global_stat_buf = cast[*uint8](old_brk)
  global_dent_buf = cast[*uint8](old_brk + 256)

  # Get path
  argc: int32 = get_argc()
  path: *uint8 = cast[*uint8](".")
  if argc > 1:
    path = get_argv(1)

  list_dir(path)

  syscall1(SYS_exit, 0)
