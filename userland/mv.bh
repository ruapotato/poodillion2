# mv - move/rename file or directory
# Usage: mv source destination

import "lib/syscalls"

extern get_argc(): int32
extern get_argv(index: int32): ptr uint8

proc main(): int32 =
  var argc: int32 = get_argc()

  if argc < 3:
    perror("Usage: mv source destination")
    return 1

  var source: ptr uint8 = get_argv(1)
  var dest: ptr uint8 = get_argv(2)

  var result: int32 = rename(source, dest)

  if result < 0:
    perror("mv: cannot move/rename file")
    return 1

  return 0
