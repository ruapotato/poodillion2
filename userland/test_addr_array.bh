# Test addr with array indexing
from lib.syscalls import *

def main():
  # Allocate buffer
  old_brk: int32 = syscall1(SYS_brk, 0)
  new_brk: int32 = old_brk + 4096
  syscall1(SYS_brk, new_brk)
  buffer: *uint8 = cast[*uint8](old_brk)

  # Set some values
  buffer[0] = cast[uint8](65)  # 'A'
  buffer[1] = cast[uint8](66)  # 'B'
  buffer[2] = cast[uint8](67)  # 'C'
  buffer[3] = cast[uint8](68)  # 'D'

  # Write using addr(buffer[i])
  i: int32 = 0
  while i < 4:
    syscall3(SYS_write, STDOUT, cast[int32](addr(buffer[i])), 1)
    i = i + 1

  syscall1(SYS_exit, 0)
